<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <variable
        name="data"
        type="cn.qingchengfit.model.base.Brand"
        />
  </data>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="74dp"
      android:paddingLeft="15dp"
      >
    <ImageView
        android:id="@+id/img_gym_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:background="@color/bg_red"
        />
    <TextView
        android:id="@+id/tv_gym_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_gym_photo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_gym_photo"
        android:text="@{data.name}"
        tools:text="引力工场"
        style="@style/QcTextStyleStandardDark"
        />
    <TextView
        android:id="@+id/tv_gym_create_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_gym_name"
        android:layout_below="@id/tv_gym_name"
        android:layout_marginTop="5dp"
        android:text='@{"创建人："+data.created_by.username}'
        tools:text="创建人：Smart"
        style="@style/QcTextStyleSmallWarm"
        />
    <TextView
        android:id="@+id/tv_gmy_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        tools:text="场馆数量"

        style="@style/QcTextStyleSmallWarm"
        />
    <include
        layout="@layout/divider_medium"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        />

  </RelativeLayout>
</layout>
