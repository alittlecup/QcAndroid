<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
  <data>
  </data>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:paddingLeft="15dp"
      >
    <ImageView
        android:id="@+id/img_gym_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@color/bg_red"
        />
    <TextView
        android:id="@+id/tv_brand_gym_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/img_gym_photo"
        tools:text="引力工场"
        style="@style/QcTextStyleStandardDark"
        />
    <TextView
        android:id="@+id/tv_gym_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_brand_gym_name"
        android:layout_below="@id/tv_brand_gym_name"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        tools:text="北京市朝阳区东四环北路阳光上东安徒生花园29号楼t北京市朝阳区东四环北路阳光上东安徒生花园29号楼t"
        style="@style/QcTextStyleSmallWarm"
        />
    <include
        layout="@layout/divider_medium"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_below="@+id/tv_gym_address"
        />

  </RelativeLayout>
</layout>
