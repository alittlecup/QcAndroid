<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="品牌logo"
          style="@style/QcTextStyleStandardDark"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="3dp"
          android:text="*"
          android:textColor="@color/danger_red_normal"
          android:textSize="15sp"
          />
      <Space
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1"
          />
      <ImageView
          android:id="@+id/img_gym_photo"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:src="@drawable/ic_default_header"
          tools:background="@color/bg_red"
          />
    </LinearLayout>
    <View
        android:id="@+id/commoninput_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_white"
        />
    <Space
        android:layout_width="0dp"
        android:layout_height="15dp"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_brand_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white"
        app:civ_edit_able="true"
        app:civ_hint="请输入品牌名称"
        app:civ_lable="品牌名称"
        app:civ_nonnull="true"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_brand_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white"
        app:civ_clickable="true"
        app:civ_edit_able="false"
        app:civ_lable="场馆数量"
        app:civ_nonnull="true"
        app:civ_showdivier="false"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_white"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="下一步"
        style="@style/QcBtnPrimary"
        />

  </LinearLayout>
</layout>