<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
        name="brand"
        type="cn.qingcheng.gym.vo.IMyGymsItemData"
        />
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/bg_light_grey"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="270dp"
          android:background="@color/toolbar"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >
        <ImageView
            android:id="@+id/img_gmy_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            tools:background="@color/bg_white"
            />
        <TextView
            android:id="@+id/tv_gym_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/bg_white"
            android:textSize="17sp"
            tools:text="引力工厂-798店"
            />
        <TextView
            android:id="@+id/tv_gym_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="工作室"
            style="@style/QcTextStyleSmallGrey"
            />
      </LinearLayout>

      <Button
          android:id="@+id/btn_apply"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_gravity="bottom"
          android:layout_marginBottom="33dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:text="申请加入场馆"
          android:textSize="17sp"
          style="@style/QcBtnPrimary"
          />
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="170dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="207dp"
          android:background="@drawable/bg_white_corners"
          android:translationZ="2dp"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="30dp"
            >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="超级管理员"
                android:textColor="@color/text_black"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_create_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                tools:text="Kent"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:orientation="horizontal"

              >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textColor="@color/text_black"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_gym_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                tools:text="北京市朝阳区恒通国际创新园C7栋二层北京市朝阳区恒通国际创新园C7栋二层"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:orientation="horizontal"
              >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="我的职位"
                android:textColor="@color/text_black"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_my_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_grey"
                android:textSize="14sp"
                tools:text="教练"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"

                bind:srcCompat="@drawable/vd_arrow_right_grey"
                />
          </LinearLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="392dp"
          android:text="提交申请后，需要管理员同意之后才能加入场馆"
          style="@style/QcTextStyleSmallGrey"
          />
    </FrameLayout>
  </LinearLayout>
</layout>