<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
  <data>
  </data>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:background="@color/bg_white"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      >
    <ImageView
        android:id="@+id/img_gym_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:background="@color/bg_red"
        />
    <TextView
        android:id="@+id/tv_gym_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_gym_photo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_gym_photo"
        tools:text="引力工场"
        style="@style/QcTextStyleStandardDark"
        />
    <TextView
        android:id="@+id/tv_gym_create_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_gym_name"
        android:layout_below="@id/tv_gym_name"
        android:layout_marginTop="5dp"
        tools:text="创建人：Smart"
        style="@style/QcTextStyleSmallWarm"
        />
    <TextView
        android:id="@+id/tv_current"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/tv_gym_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_gym_name"
        android:background="@drawable/btn_text_primary_corners"
        android:gravity="center"
        android:text="当前场馆"
        android:textColor="@color/bg_white"
        android:textSize="10sp"
        />
    <include
        layout="@layout/divider_medium"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        />
  </RelativeLayout>
</layout>
