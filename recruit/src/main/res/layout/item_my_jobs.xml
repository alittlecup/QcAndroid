<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

  <RelativeLayout
      android:id="@+id/layout_i_sent"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/bg_click"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/vd_recruit_applicant_sent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="我投递的"
        style="@style/QcTextStyleSmallDark"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/layout_i_invited"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/bg_click"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/img_invited"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/vd_recruit_applicant_invite"
        />

    <View
        android:id="@+id/v_has_invited"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignEnd="@id/img_invited"
        android:layout_alignRight="@id/img_invited"
        android:layout_alignTop="@id/img_invited"
        android:layout_marginRight="5dp"
        android:background="@drawable/qcw_shape_circle_red"
        android:visibility="gone"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="收到的邀约"
        style="@style/QcTextStyleSmallDark"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/layout_i_stared"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/bg_click"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/vd_recruit_applicant_starred"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="我的收藏"
        style="@style/QcTextStyleSmallDark"
        />
  </RelativeLayout>


</LinearLayout>
