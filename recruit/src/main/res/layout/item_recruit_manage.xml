<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_click"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/vd_triangle_right_primary_5x11"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="招聘管理"
      style="@style/QcTextStyleStandardDark"
      />

  <android.support.v4.widget.Space
      android:layout_width="@dimen/little"
      android:layout_height="match_parent"
      />

  <ImageView
      android:id="@+id/img_red_dot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/red_dot"
      />

  <android.support.v4.widget.Space
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      />

  <TextView
      android:id="@+id/tv_publish_jobs"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="已发布4个职位"
      style="@style/QcTextStyleStandardWarm"
      />

  <android.support.v4.widget.Space
      android:layout_width="@dimen/little"
      android:layout_height="match_parent"
      />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_arrow_right"
      />


</LinearLayout>