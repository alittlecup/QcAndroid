<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
  <data>
  </data>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      >
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:src="@color/colorPrimary"
        />
    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:paddingTop="24dp"
        android:layout_toRightOf="@+id/product_image"
        android:gravity="end"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/product_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:lines="1"
          android:maxLength="10"
          tools:text="玉米玉米玉米玉米玉玉玉米玉米玉玉玉米玉米玉玉玉米玉米玉玉玉米玉米玉玉玉米玉米玉玉玉玉"
          style="@style/QcTextStyleLargeDark"
          />
      <TextView
          android:id="@+id/product_sale_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginLeft="5dp"
          android:minWidth="75dp"
          tools:text="出售中"
          style="@style/QcTextStyleSmallGrey"
          />
      <TextView
          android:id="@+id/inventory_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          tools:text="12/个(总共)"
          />
    </LinearLayout>
    <TextView
        android:id="@+id/goods_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
android:layout_below="@id/ll_container"
        android:layout_alignLeft="@+id/ll_container"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        tools:text="12/个(小份)12/个(小份)12/个(小份)12/个(小份)12/个(小份)12/个(小份)12/个(小份)12/个(小份)12/个(小份)12/个(小份)"
        style="@style/QcTextStyleMediumGrey"
        />

  </RelativeLayout>
</layout>