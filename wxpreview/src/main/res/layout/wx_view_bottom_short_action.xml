<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
  </data>
  <FrameLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:divider="@drawable/divier_linear_nomargin"
        android:orientation="horizontal"
        android:showDividers="middle"
        >
      <LinearLayout
          android:id="@+id/btn_preview"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical"
          >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_bottom_preview"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员端预览"
            android:textSize="@dimen/min_font"
            style="@style/Qc.TextCommonBlack"
            />
      </LinearLayout>

      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          >
        <LinearLayout
            android:id="@+id/btn_wx_pm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              app:srcCompat="@drawable/ic_wx_pm"
              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="会员端小程序"
              android:textSize="@dimen/min_font"
              style="@style/Qc.TextCommonBlack"
              />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_ad_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_fill_red_slide_white"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="免费"
            android:layout_marginRight="2dp"
            android:textColor="@color/white"
            android:textSize="9sp"
            />
      </FrameLayout>

      <LinearLayout
          android:id="@+id/btn_poplularize"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical"

          >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_share_more_export"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场馆推广"
            android:textSize="@dimen/min_font"
            style="@style/Qc.TextCommonBlack"
            />
      </LinearLayout>

    </LinearLayout>
    <include layout="@layout/divider_medium"/>
  </FrameLayout>
</layout>
