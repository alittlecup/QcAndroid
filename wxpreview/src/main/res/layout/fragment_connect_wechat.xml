<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical"
    >

  <include layout="@layout/common_simple_toolbar"/>

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/civ_wechat_name"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:civ_hint="@string/wx_hint_write_wechat_public"
      app:civ_lable="公众号名称"
      app:civ_text_color="@color/text_black"

      />

  <LinearLayout
      android:id="@+id/layout_up_img"
      android:layout_width="match_parent"
      android:layout_height="86dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/wx_label_upload_public_qr"
        style="@style/Qc.TextCommonBlack"
        />

    <ImageView
        android:id="@+id/img_wechat_public"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/bg_grey"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_photo_camera_white_24dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:srcCompat="@drawable/ic_arrow_right"

        />
  </LinearLayout>

  <include layout="@layout/divider_grey"/>
</LinearLayout>