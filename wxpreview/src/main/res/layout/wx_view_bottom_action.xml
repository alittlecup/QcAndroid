<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:divider="@drawable/divier_linear_nomargin"
      android:orientation="horizontal"
      android:showDividers="middle"
      >
    <LinearLayout
        android:id="@+id/btn_help"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          app:srcCompat="@drawable/ic_homepage_help"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/wx_help"
          android:textSize="@dimen/min_font"
          style="@style/Qc.TextCommonBlack"
          />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_config_homepage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"

        >

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          app:srcCompat="@drawable/ic_homepage_setting"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/wx_config_homepage"
          android:textSize="@dimen/min_font"
          style="@style/Qc.TextCommonBlack"
          />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_wx_pm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"

        >

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          app:srcCompat="@drawable/ic_wx_pm"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="小程序"
          android:textSize="@dimen/min_font"
          style="@style/Qc.TextCommonBlack"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_poplularize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"

        >

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          app:srcCompat="@drawable/ic_share_more_export"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/wx_popularize"
          android:textSize="@dimen/min_font"
          style="@style/Qc.TextCommonBlack"
          />
    </LinearLayout>

  </LinearLayout>
</layout>
