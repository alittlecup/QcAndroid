<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="98dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tv_ticket_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:singleLine="true"
          android:ellipsize="end"
          tools:text="天猫舞蹈体验天猫舞蹈体验课课"
          style="@style/QcTextStyleStandardDark"
          />
      <TextView
          android:id="@+id/tv_ticket_money"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="6dp"
          tools:text="电子券金额：¥ 300"
          style="@style/QcTextStyleSmallWarm"
          />
      <TextView
          android:id="@+id/tv_ticket_time"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="6dp"
          tools:text="核销时间：2018.11.13  14:20:45"
          style="@style/QcTextStyleSmallWarm"
          />
    </LinearLayout>
    <ImageView
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/vd_arrow_right_grey"
        />

  </LinearLayout>
</layout>
