<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="vm"
        type="cn.qingchengfit.student.view.followrecord.FollowRecordEditViewModel"
        />
    <import type="cn.qingchengfit.student.bingdings.BindingUtils"/>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />

  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/bg_grey"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:minHeight="180dp"
        android:orientation="vertical"
        >
      <EditText
          android:id="@+id/edit_content"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@null"
          android:paddingLeft="15dp"
          android:paddingTop="15dp"
          android:hint="输入跟进详情&amp;结果，140字以内"
          android:maxLength="140"
          android:text="@{vm.content}"
          />
      <Space
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1"
          />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/rv_pics"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/activity_horizontal_margin"
          />
      <ImageView
          android:id="@+id/choose_img"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_gravity="right"
          android:tint="@color/text_grey"
          app:srcCompat="@drawable/vd_ic_pic"
          android:padding="10dp"
          />

    </LinearLayout>

    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/cm_choose_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:civ_clickable="true"
        app:civ_edit_able="false"
        app:civ_hint="请选择"
        app:civ_lable="跟进方式"
        app:civ_showright="true"
        app:civ_text_color="@color/text_black"
        app:civ_content="@{BindingUtils.getFollowRecordMethod(vm.followMethod,context)}"
        />
    <LinearLayout
        android:id="@+id/ll_choose_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="跟进状态"
          style="@style/QcTextStyleStandardDark"
          />
      <TextView
          android:id="@+id/tv_edit_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:background="@drawable/st_text_primary"
          android:gravity="center"
          android:text="编辑"
          android:textColor="@color/colorPrimary"
          android:textSize="12sp"
          />
      <Space
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1"
          />
      <TextView
          android:id="@+id/tv_follow_status"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:textColor="@color/text_grey"
          android:text="@{BindingUtils.getFollowRecordStatus(vm.followStatus)}"
          />

      <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginRight="15dp"
          android:scaleType="fitXY"
          android:src="@drawable/vd_arrow_right_grey"
          />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15sp"
        android:background="@color/divider_medium"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/cm_notify_other"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:civ_clickable="true"
        app:civ_edit_able="false"
        app:civ_hint="请选择"
        app:civ_lable="通知他人"
        app:civ_showright="true"
        app:civ_text_color="@color/text_black"
        app:civ_content="@{BindingUtils.getFollowRecordNotiOhters(vm.notiOthers,context)}"
        />

    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/cm_choose_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:civ_clickable="true"
        app:civ_edit_able="false"
        app:civ_hint="请选择时间"
        app:civ_lable="下次跟进时间"
        app:civ_showdivier="false"
        app:civ_showright="true"
        app:civ_text_color="@color/text_black"
        app:civ_content="@{BindingUtils.getNextFollowTime(vm.nextFollowTime)}"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_medium"
        />


  </LinearLayout>
</layout>