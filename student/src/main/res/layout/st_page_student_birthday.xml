<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/img_pre"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:paddingBottom="15dp"
          android:paddingLeft="20dp"
          android:paddingTop="15dp"
          android:src="@drawable/vd_arrow_left_black"
          android:tint="@color/colorPrimary"
          />
      <TextView
          android:id="@+id/tv_month"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_black"
          tools:text="2018年4月"
          />
      <ImageView
          android:id="@+id/img_next"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:paddingBottom="15dp"
          android:paddingRight="10dp"
          android:paddingTop="15dp"
          android:src="@drawable/vd_arrow_right_grey"
          android:tint="@color/colorPrimary"
          />
      <Space
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1"
          />
      <TextView
          android:id="@+id/tv_select_month"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="25dp"
          android:text="全选本月"
          android:textColor="@color/colorPrimary"
          android:textSize="14sp"
          />
    </LinearLayout>
    <include layout="@layout/divider_grey"/>
    <cn.qingchengfit.saascommon.calendar.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_white"
        android:orientation="vertical"
        app:calendar_content_view_id="@+id/content"
        >

      <cn.qingchengfit.saascommon.calendar.CalendarView
          android:id="@+id/calendarView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bg_white"
          app:calendar_height="46dp"
          app:current_day_text_color="@color/colorPrimary"
          app:current_month_lunar_text_color="@color/text_black"
          app:current_month_text_color="@color/text_black"
          app:month_view="cn.qingchengfit.student.widget.SimpleMonthView"
          app:other_month_text_color="@color/text_grey"
          app:scheme_text_color="@color/text_black"
          app:scheme_theme_color="@color/pastel_red"
          app:selected_text_color="@color/text_black"
          app:selected_theme_color="@color/st_student_birthday_select"
          app:week_background="@color/bg_white"
          app:week_bar_view="cn.qingchengfit.student.widget.SimpleWeekBar"
          app:week_text_color="@color/text_black"
          app:week_view="cn.qingchengfit.student.widget.SimpleWeekView"
          />
      <include layout="@layout/divider_grey"/>
      <LinearLayout
          android:id="@+id/content"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bg_white"
          android:orientation="vertical"
          >
        <TextView
            android:id="@+id/tv_select_content"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="4月生日124人"
            />
        <include layout="@layout/divider_grey"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


      </LinearLayout>
    </cn.qingchengfit.saascommon.calendar.CalendarLayout>
    <include
        layout="@layout/layout_bottom_allot_action"
        android:id="@+id/bottom_allot"
        />

  </LinearLayout>
</layout>