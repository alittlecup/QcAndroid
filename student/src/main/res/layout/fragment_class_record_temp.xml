<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="fragment"
        type="cn.qingchengfit.student.view.detail.ClassRecordTempFragment"
        />
  </data>

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:onClick="@{fragment::routeToDetail}"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:text="训练记录"
        android:textColor="@color/text_dark"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/train_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/vd_arrow_right_grey_small"
        android:onClick="@{fragment::routeToDetail}"
        android:paddingRight="15dp"
        android:text="详情"
        app:layout_constraintBaseline_toBaselineOf="@id/text_title"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        />
  </android.support.constraint.ConstraintLayout>
</layout>
