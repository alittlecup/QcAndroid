<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_weight="6"
      >

    <TextView
        android:id="@+id/tv_ptag_select_answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="健康"
        style="@style/QcTextStyleMediumDark"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_ptag_select_answer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="内容内容内容内容内容内容ssssssssssssssssssssssssssssssssss"
        style="@style/QcTextStyleSmallWarm"
        android:maxWidth="400dp"
        />

  </LinearLayout>

  <Space
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      />

  <CheckBox
      android:id="@+id/cb_ptag_select"
      style="@style/Qc.CheckBox2"
      android:layout_width="40dp"
      android:layout_height="30dp"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:padding="10dp"
      tools:visibility="visible"/>


</LinearLayout>