<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="viewModel"
        type="cn.qingchengfit.student.view.followup.IncreaseStudentTopViewModel"/>
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bg_white"
      android:orientation="vertical"
      >
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/radiogroup_blue_bg"
        android:orientation="horizontal"
        >
      <RadioButton
          android:id="@+id/radio_left"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/radio_white_tran_selector"
          android:button="@null"
          android:gravity="center"
          android:text="月"
          android:textColor="@color/text_black"
          android:textSize="13sp"
          />
      <View
          android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="@color/divider_light"
          />
      <RadioButton
          android:id="@+id/radio_mid"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/radio_white_tran_selector"
          android:button="@null"

          android:gravity="center"
          android:text="周"
          android:textColor="@color/text_black"
          android:textSize="13sp"
          />
      <View
          android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="@color/divider_medium"
          />
      <RadioButton
          android:id="@+id/radio_right"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/radio_white_tran_selector"
          android:button="@null"
          android:gravity="center"
          android:text="日"
          android:textColor="@color/text_black"
          android:textSize="13sp"
          />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="13dp"
        android:background="@color/divider_medium"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@{viewModel.tvContent}"
        tools:text="8月20日-8月27日新增注册89人"
        style="@style/QcTextStyleMediumDark"
        />
    <cn.qingchengfit.saascommon.widget.LineCharDate
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:datas="@{viewModel.lineData}"
        app:markViewUnit='@{"人"}'
        app:highlightValue='@{viewModel.curPostion}'
        android:layout_marginTop="30dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_medium"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_grey"
        android:gravity="center"
        android:text="/详细列表/"
        style="@style/QcTextStyleSmallGrey"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_medium"
        />
  </LinearLayout>
</layout>