<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
  <cn.qingchengfit.widgets.SwipeLayout
      android:id="@+id/ly_swipe"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/bottom_wrapper"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="end|right"
        >

      <ImageView
          android:id="@+id/btn_edit"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:background="@color/warm_grey"
          android:scaleType="center"
          app:srcCompat="@drawable/vd_edit_white_24dp"
          />
      <ImageView
          android:id="@+id/btn_del"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:background="@color/red"
          android:scaleType="center"
          app:srcCompat="@drawable/vd_delete_forever_white_24dp"
          />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/front_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
      <TextView
          android:id="@+id/tv"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:background="@color/white"
          style="@style/QcTextStyleStandardDark"
          xmlns:tools="http://schemas.android.com/tools"
          tools:text="@string/common_comfirm"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          />
    </FrameLayout>

  </cn.qingchengfit.widgets.SwipeLayout>

</FrameLayout>

