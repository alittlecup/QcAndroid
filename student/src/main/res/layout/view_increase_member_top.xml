<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
        name="viewModel"
        type="cn.qingchengfit.student.view.followup.IncreaseMemberTopViewModel"/>
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bg_white"
      android:orientation="vertical"
      >
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:padding="1dp"
        android:background="@drawable/radiogroup_orange_bg"
        android:orientation="horizontal"
        >
      <RadioButton
          android:id="@+id/radio_left"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/radio_white_tran_selector_left"
          android:button="@null"
          android:gravity="center"
          android:text="30天"
          android:textColor="@color/text_black"
          android:textSize="13sp"
          />
      <View
          android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="@color/divider_light"
          />
      <RadioButton
          android:id="@+id/radio_mid"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/radio_white_tran_selector"
          android:button="@null"
          android:gravity="center"
          android:text="7天"
          android:textColor="@color/text_black"
          android:textSize="13sp"
          />
      <View
          android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="@color/divider_medium"
          />
      <RadioButton
          android:id="@+id/radio_right"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/radio_white_tran_selector_right"
          android:button="@null"
          android:gravity="center"
          android:text="今天"
          android:textColor="@color/text_black"
          android:textSize="13sp"
          />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="13dp"
        android:background="@color/divider_medium"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@{viewModel.curContent}"
        tools:text="8月20日-8月27日"
        style="@style/QcTextStyleMediumDark"
        />
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:textSize="36dp"
        tools:text="89"
        android:text="@{viewModel.count}"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_type_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="新用户跟进"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_medium"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_grey"
        android:gravity="center"
        android:text="/详细列表/"
        style="@style/QcTextStyleSmallGrey"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_medium"
        />
  </LinearLayout>
</layout>