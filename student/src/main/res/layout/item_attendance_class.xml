<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/tv_day"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="@dimen/little"
      android:textColor="@color/text_black"
      android:textSize="22sp"
      tools:text="120"
      />

  <TextView
      android:id="@+id/tv_action"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_day"
      android:layout_centerHorizontal="true"
      android:text="出勤"

      />

  <View
      android:id="@+id/bg_color"
      android:layout_width="16dp"
      android:layout_height="2dp"
      android:layout_below="@id/tv_action"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="7dp"
      android:background="@color/bg_orange"
      />

  <TextView
      android:id="@+id/unit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@id/tv_day"
      android:layout_toEndOf="@id/tv_day"
      android:layout_toRightOf="@id/tv_day"
      android:text="@string/unit_day"
      android:textSize="10sp"
      />
</RelativeLayout>