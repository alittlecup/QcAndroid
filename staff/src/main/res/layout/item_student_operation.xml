<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    >

  <FrameLayout
      android:layout_width="60dp"
      android:layout_height="40dp"
      >

    <ImageView
        android:id="@+id/img_function"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/vector_student_management_sales"
        />

    <ImageView
        android:id="@+id/img_pro"
        android:layout_width="24dp"
        android:layout_height="14dp"
        android:layout_gravity="right|end"
        android:background="@drawable/bg_rect_white_radius"
        android:padding="1dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_pro_green"
        />

  </FrameLayout>


  <TextView
      android:id="@+id/tv_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_weight="1"
      android:text="@string/qc_student_allotsale"
      android:textSize="@dimen/min_font"
      style="@style/Qc.TextCommonBlack"
      />

</LinearLayout>