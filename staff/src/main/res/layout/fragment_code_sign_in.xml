<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:gravity="center"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店内"
        style="@style/QcTextStyleLargeDark"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/tv_code_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="签到"
        style="@style/QcTextStyleLargeDark"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qrcode"
        style="@style/QcTextStyleLargeDark"
        android:textSize="20dp"
        />
  </LinearLayout>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/fun_introduction"
      android:layout_marginTop="15dp"
      style="@style/QcTextStyleSmallWarm"
      />

  <TextView
      android:id="@+id/tv_sign_introduction"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="@string/code_sign_in_introduction"
      android:gravity="center"
      android:paddingLeft="50dp"
      android:paddingRight="50dp"
      android:layout_marginTop="15dp"
      style="@style/QcTextStyleMediumGrey"
      />

  <ImageView
      android:id="@+id/img_sign_code"
      android:layout_width="140dp"
      android:layout_height="140dp"
      android:layout_marginTop="30dp"
      tools:src="@drawable/head"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/code_sign_tips"
      android:layout_marginLeft="70dp"
      android:layout_marginRight="70dp"
      android:gravity="center"
      android:layout_marginTop="10dp"
      style="@style/QcTextStyleMediumGrey"
      />

</LinearLayout>