<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:background="@color/white"
    android:minHeight="?attr/actionBarSize"
    >

  <View
      android:id="@+id/myhome_bg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="?colorPrimaryDark"
      />

  <ImageView
      android:id="@+id/header"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      tools:src="@drawable/ic_default_header"
      />

  <ImageView
      android:id="@+id/gender"
      android:layout_width="14dp"
      android:layout_height="14dp"
      android:layout_alignBottom="@id/header"
      android:layout_alignRight="@id/header"
      android:layout_margin="1dp"
      tools:src="@drawable/ic_gender_signal_female"
      />

  <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignTop="@+id/header"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="2dp"
      android:layout_toLeftOf="@+id/student_status"
      android:layout_toRightOf="@+id/header"
      android:ellipsize="end"
      android:lines="1"
      android:maxWidth="200dp"
      android:textColor="@color/white"
      android:textSize="@dimen/common_font"
      tools:text="@string/test_long"
      />

  <TextView
      android:id="@+id/phone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@+id/header"
      android:layout_marginBottom="5dp"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="0dp"
      android:layout_toRightOf="@+id/header"
      android:ellipsize="end"
      android:lines="1"
      android:maxWidth="200dp"
      android:textColor="@color/white"
      android:textSize="@dimen/common_font"
      tools:text="13800138000"
      />

  <TextView
      android:id="@+id/student_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignTop="@+id/name"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:gravity="center"
      android:textColor="@color/white"
      android:textSize="12sp"
      android:visibility="visible"
      tools:text="跟进中"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_alignParentBottom="true"
      android:background="@color/transparent"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:id="@+id/ll_student_call"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        android:background="@color/halftransparent_grey"
        android:gravity="center"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/tv_student_call"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawablePadding="12dp"
          android:text="拨打电话"
          android:textColor="@color/white"
          android:textSize="@dimen/min_font"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_student_msg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:background="@color/halftransparent_grey"
        android:gravity="center"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/tv_student_msg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawablePadding="12dp"
          android:text="发送短信"
          android:textColor="@color/white"
          android:textSize="@dimen/min_font"
          />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>