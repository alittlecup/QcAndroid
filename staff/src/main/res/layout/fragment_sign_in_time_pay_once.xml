<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:bind="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/activity_horizontal_margin"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:gravity="center_vertical"
          android:text="@string/online_pay_client"
          android:textColor="@color/qc_text_black"
          android:textSize="12sp"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginTop="5dp"
          android:gravity="center_vertical"
          >
        <TextView
            android:id="@+id/tv_wx_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_pay_wechat"
            android:drawablePadding="5dp"
            android:text="@string/wechat_pay"
            android:textColor="@color/qc_text_black"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/vd_pay_alipay_small"
            android:drawablePadding="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/ali_pay"
            android:textColor="@color/qc_text_black"
            android:textSize="12sp"
            />
      </LinearLayout>
    </LinearLayout>
    <cn.qingchengfit.widgets.ExpandedLayout
        android:id="@+id/sw_open"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:el_label="单次支付"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_pay_count"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:civ_edit_able="true"
        app:civ_inputnum="true"
        app:civ_lable="单次支付"
        app:civ_unit="元"
        />


  </LinearLayout>
</layout>
