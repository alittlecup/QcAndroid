<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:bind="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="224dp"
          android:background="@color/toolbar"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >
        <ImageView
            android:id="@+id/img_user_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            tools:background="@color/bg_white"
            />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/bg_white"
            android:textSize="16sp"
            tools:text="Mekhi"
            />
        <TextView
            android:id="@+id/tv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/bg_white"
            android:textSize="14sp"
            tools:text="17378869003"
            />
      </LinearLayout>

      <Button
          android:id="@+id/btn_apply"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_gravity="bottom"
          android:text="确认入场"
          android:textSize="17sp"
          style="@style/QcBtnPrimary"
          />


      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="160dp"
          android:elevation="5dp"
          android:background="@drawable/bg_white_corners"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:padding="15dp"
            >
          <TextView
              android:id="@+id/tv_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="入场会员卡"
              android:textColor="@color/text_black"
              android:textSize="15sp"
              />
          <ImageView
              android:id="@+id/img_card"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:layout_below="@+id/tv_title"
              android:layout_marginTop="30dp"
              app:srcCompat="@drawable/ic_sign_card"
              />
          <TextView
              android:id="@+id/tv_card_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@id/img_card"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@+id/img_card"
              tools:text="798店储值卡"
              style="@style/QcTextStyleMediumDark"
              />
          <TextView
              android:id="@+id/tv_card_desc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@id/tv_card_name"
              android:layout_below="@+id/tv_card_name"
              android:layout_marginTop="5dp"
              tools:text="余额：￥300"
              style="@style/QcTextStyleMediumGrey"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              tools:text="期限卡不扣费"
              style="@style/QcTextStyleMediumGrey"
              />
        </RelativeLayout>


      </android.support.v7.widget.CardView>


    </FrameLayout>

  </LinearLayout>
</layout>
