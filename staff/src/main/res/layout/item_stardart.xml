<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:id="@+id/charge_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_rect_prime"
      android:gravity="center"
      android:minHeight="94dp"
      android:orientation="vertical"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingTop="@dimen/activity_vertical_margin"

      >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:text="1200元"
        />

    <TextView
        android:id="@+id/real_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        tools:text="(售价1200元)"
        />

    <TextView
        android:id="@+id/valid_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorPrimary"
        android:textSize="11sp"
        tools:text="有效期:300天"
        />

    <TextView
        android:id="@+id/support_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorPrimary"
        android:textSize="11sp"
        tools:text="适用于"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/chosen"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@id/charge_layout"
      android:layout_alignTop="@id/charge_layout"
      app:srcCompat="@drawable/ic_chosen_hook"
      tools:src="@drawable/ic_chosen_hook"
      />

  <ImageView
      android:id="@+id/tag_only_staff"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_margin="8dp"
      android:visibility="gone"
      app:srcCompat="@drawable/ic_module_staff_grey"

      />
</RelativeLayout>
