<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_simple_toolbar"/>

  <ScrollView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"

      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:orientation="vertical"
        >


      <RelativeLayout
          android:id="@+id/drawer_headerview"
          android:layout_width="match_parent"
          android:layout_height="86dp"
          android:background="@color/white"
          >

        <FrameLayout
            android:id="@+id/header_icon_out"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:background="@drawable/circle_halftrans"
            android:baseline="32dp"
            >

          <ImageView
              android:id="@+id/header_icon"
              android:layout_width="64dp"
              android:layout_height="64dp"
              android:layout_gravity="center"
              android:scaleType="fitXY"
              android:src="@drawable/default_manage_male"
              />
        </FrameLayout>


        <TextView
            android:id="@+id/drawer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/header_icon_out"
            android:layout_toRightOf="@id/header_icon_out"
            android:baseline="32dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableRight="@drawable/ic_arrow_right"
            android:textColor="@color/qc_text_black"
            android:textSize="16sp"
            tools:text="xxx"
            />

      </RelativeLayout>

      <include layout="@layout/divider_grey"/>

      <include layout="@layout/divider_grey_margin"/>

      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/civ_resume"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="我的简历"
          app:civ_showright="true"
          app:civ_text_color="@color/text_dark"
          />

      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/civ_orders"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="我的订单"
          app:civ_showright="true"
          app:civ_text_color="@color/text_dark"
          />

      <include layout="@layout/divider_grey"/>

      <include layout="@layout/divider_grey_margin"/>


      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/setting_fixpw"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="@string/home_fix_pw"
          app:civ_showright="true"
          app:civ_text_color="@color/qc_text_black"
          />

      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/setting_fixphone"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="@string/home_fix_phone"
          app:civ_showdivier="true"
          app:civ_showright="true"
          app:civ_text_color="@color/qc_text_black"
          />


      <include layout="@layout/divider_grey"/>

      <include layout="@layout/divider_grey_margin"/>


      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/setting_fix_notify"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="@string/home_fix_notify"
          app:civ_showdivier="false"
          app:civ_showright="true"
          app:civ_text_color="@color/qc_text_black"
          />

      <include layout="@layout/divider_grey"/>

      <include layout="@layout/divider_grey_margin"/>

      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/aboutus"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="@string/home_about_us"
          app:civ_showright="true"
          app:civ_text_color="@color/qc_text_black"
          />

      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/report"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="@string/home_report"
          app:civ_showright="true"
          app:civ_text_color="@color/qc_text_black"
          />

      <cn.qingchengfit.widgets.CommonInputView
          android:id="@+id/share"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          app:civ_clickable="true"
          app:civ_lable="@string/home_share"
          app:civ_showright="true"
          app:civ_text_color="@color/qc_text_black"
          />


      <RelativeLayout
          android:id="@+id/web_site"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          android:background="@color/white"
          android:descendantFocusability="afterDescendants"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="网页端地址"
            android:textColor="@color/qc_text_black"
            style="@style/Qc.TextCommonGrey"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_right"
            android:visibility="visible"
            tools:visibility="visible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/transparent"
            android:focusable="true"
            android:gravity="end"
            android:hint=""
            android:imeOptions="actionDone"
            android:maxWidth="200dp"
            android:minWidth="30dp"
            android:singleLine="true"
            android:text="http://cloud.qingchengfit"
            style="@style/Qc.TextCommonGrey"
            />

      </RelativeLayout>

      <include layout="@layout/divider_grey_left_right"/>

      <RelativeLayout
          android:id="@+id/update"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          android:background="@color/white"
          android:descendantFocusability="afterDescendants"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/home_update"
            android:textColor="@color/qc_text_black"
            style="@style/Qc.TextCommonGrey"
            />

        <ImageView
            android:id="@+id/commoninput_righticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_right"
            android:visibility="visible"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@id/commoninput_righticon"
            android:layout_toStartOf="@id/commoninput_righticon"
            android:background="@color/transparent"
            android:focusable="true"
            android:gravity="end"
            android:hint=""
            android:imeOptions="actionDone"
            android:maxWidth="200dp"
            android:minWidth="30dp"
            android:singleLine="true"
            style="@style/Qc.TextCommonGrey"
            />

      </RelativeLayout>


      <include layout="@layout/divider_grey"/>

      <include layout="@layout/divider_grey_margin"/>

      <TextView
          android:id="@+id/logout"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          android:background="@color/white"
          android:gravity="center"
          android:text="@string/logout"
          android:textColor="@color/red"
          />

      <include layout="@layout/divider_grey"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="30dp"
          />
    </LinearLayout>

  </ScrollView>
</LinearLayout>
