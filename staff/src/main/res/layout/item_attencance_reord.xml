<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/bg_click"
    android:orientation="vertical"
    >

  <View
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="97.5dp"
      android:background="@color/divider_white"
      >

  </View>


  <View
      android:id="@+id/item_statement_detail_bottomdivier"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"
      android:background="@color/divider_white"
      android:visibility="gone"
      >
  </View>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:orientation="horizontal"
      >

    <View
        android:id="@+id/item_statement_detail_headerdivier"
        android:layout_width="97.5dp"
        android:layout_height="1dp"
        android:background="@color/divider_white"
        >
    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_white"
        >
    </View>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/item_statement_detail_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/item_statement_detail_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:textSize="28sp"
        tools:text="11"
        style="@style/Qc.TextCommonBlack"
        />

    <TextView
        android:id="@+id/item_statement_detail_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:paddingBottom="3dp"
        android:textSize="12sp"
        tools:text="5月"
        style="@style/Qc.TextCommonGrey"
        />

  </LinearLayout>

  <ImageView
      android:id="@+id/item_statement_detail_pic"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_centerVertical="true"
      android:layout_marginLeft="75dp"
      android:background="@color/white"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_toRightOf="@id/item_statement_detail_pic"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/item_statement_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="11"
        style="@style/Qc.TextCommonBlack"
        />

    <TextView
        android:id="@+id/item_statement_time_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5月"
        style="@style/Qc.TextCommonGrey"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/account"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:textSize="16sp"
      android:visibility="gone"
      tools:text="100"
      style="@style/Qc.TextCommonBlack"
      />
</RelativeLayout>