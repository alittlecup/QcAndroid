<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical"
    >

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/transparent"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingBottom="12dp"
      android:paddingTop="16dp"
      >

    <View
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/qc_text_grey"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="筛选某时间段内新注册的会员"
        android:textColor="@color/qc_text_grey"
        android:textSize="@dimen/min_font"
        />

    <View
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/qc_text_grey"
        />
  </LinearLayout>

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/white"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="开始日期"
        android:textColor="@color/qc_text_grey"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_follow_up_register_start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="center_vertical|right"
        android:textColor="@color/qc_text_black"
        android:textSize="13sp"
        />
  </LinearLayout>

  <include
      layout="@layout/divider_grey"
      android:layout_width="wrap_content"
      android:layout_height="1px"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@color/white"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="结束日期"
        android:textColor="@color/qc_text_grey"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_follow_up_register_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="center_vertical|right"
        android:textColor="@color/qc_text_black"
        android:textSize="13sp"
        />
  </LinearLayout>

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:background="@color/transparent"
      android:gravity="center"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_rect_top_filter_reset"
        android:gravity="center"
        android:text="重置"
        android:textColor="@color/qc_text_grey"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:background="@drawable/shape_bg_rect_top_filter_confirm"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="13sp"
        />
  </LinearLayout>

</LinearLayout>