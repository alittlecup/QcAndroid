<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_simple_toolbar"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="84dp"
      android:background="@drawable/bg_line_left_15dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="场馆LOGO"
        style="@style/QcTextStyleStandardDark"
        />

    <ImageView
        android:id="@+id/img_brand"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_line_left_15dp"
      android:gravity="center_vertical"
      android:minHeight="74dp"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="10dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="场馆名称（店名）"
        style="@style/QcTextStyleSmallGrey"
        />

    <TextView
        android:id="@+id/tv_gym_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="场馆名称（店名）"
        tools:text="xxx"
        style="@style/QcTextStyleStandardDark"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_line_left_15dp"
      android:gravity="center_vertical"
      android:minHeight="74dp"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="10dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        style="@style/QcTextStyleSmallGrey"
        />

    <TextView
        android:id="@+id/tv_gym_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="场馆名称（店名）"
        tools:text="xxx"
        style="@style/QcTextStyleStandardDark"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bg_line_left_15dp"
      android:gravity="center_vertical"
      android:minHeight="74dp"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="10dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式"
        style="@style/QcTextStyleSmallGrey"
        />

    <TextView
        android:id="@+id/tv_gym_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="场馆名称（店名）"
        tools:text="xxx"
        style="@style/QcTextStyleStandardDark"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:minHeight="74dp"
      android:orientation="vertical"
      android:paddingBottom="10dp"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="10dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="描述"
        style="@style/QcTextStyleSmallGrey"
        />

    <TextView
        android:id="@+id/tv_gym_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="xxx"
        style="@style/QcTextStyleStandardDark"
        />
  </LinearLayout>

  <include layout="@layout/divider_grey"/>
</LinearLayout>