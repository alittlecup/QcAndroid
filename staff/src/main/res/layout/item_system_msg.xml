<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@drawable/bg_click"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

  <RelativeLayout
      android:layout_width="53dp"
      android:layout_height="53dp"
      >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        tools:src="@drawable/default_manage_male"
        />

    <ImageView
        android:id="@+id/item_red_dogt"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_white"
        android:padding="1dp"
        app:srcCompat="@drawable/red_dot"
        />
  </RelativeLayout>

  <Space
      android:layout_width="10dp"
      android:layout_height="wrap_content"
      />

  <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:paddingTop="10dp"
      >

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="场馆消息"
        style="@style/QcTextStyleStandardDark"
        />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_light"
        tools:text="1分钟前"
        style="@style/QcTextStyleXsWarm"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/item_msg_tag"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:textColor="@color/red"
          android:textSize="13sp"
          tools:text="[798店家]"
          />

      <TextView
          android:id="@+id/item_msg_content"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ellipsize="end"
          android:lines="1"
          android:textSize="@dimen/min_font"
          tools:text="@string/test_long"
          style="@style/QcTextStyleSmallWarm"
          />
    </LinearLayout>
  </RelativeLayout>


</LinearLayout>