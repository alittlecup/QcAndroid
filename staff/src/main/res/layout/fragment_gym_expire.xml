<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="166dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="@dimen/qc_item_height"
      android:gravity="center"
      android:orientation="horizontal"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高级版"
        android:textSize="17sp"
        style="@style/Qc.TextCommonBlack"
        />

    <TextView
        android:id="@+id/tag_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tag_black_stroke"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:text="@string/gym_pro"
        android:textColor="@color/text_black"
        android:textSize="10sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="即将到期"
        android:textSize="17sp"
        style="@style/Qc.TextCommonBlack"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/content"
      android:layout_width="wrap_content"
      android:layout_height="70dp"
      android:gravity="center"
      android:textSize="17sp"
      style="@style/Qc.TextCommonGrey"
      />

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="@dimen/qc_item_height"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_white_click"
        android:gravity="center"
        android:text="关闭"
        style="@style/Qc.TextCommonBlack"
        />

    <TextView
        android:id="@+id/comfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_prime_click"
        android:gravity="center"
        android:text="续费"
        android:textColor="@color/white"
        style="@style/Qc.TextCommonBlack"

        />

  </LinearLayout>
</LinearLayout>