<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >


  <View
      android:id="@+id/item_statement_detail_bottomdivier"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_alignParentBottom="true"
      android:background="@color/divider_grey"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:orientation="horizontal"
      >

    <View
        android:id="@+id/item_statement_detail_headerdivier"
        android:layout_width="97.5dp"
        android:layout_height="1px"
        android:background="@color/divider_grey"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_grey"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:divider="@drawable/divier_linear_nomargin"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:showDividers="middle"
      >

    <LinearLayout
        android:id="@+id/item_statement_detail_date"
        android:layout_width="97.5dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:id="@+id/item_statement_detail_day"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="0dp"
          android:textSize="28sp"
          tools:text="11"
          style="@style/Qc.TextCommonBlack"
          />

      <TextView
          android:id="@+id/item_statement_detail_month"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-5dp"
          android:paddingBottom="3dp"
          android:textSize="12sp"
          tools:text="5月"
          style="@style/Qc.TextCommonGrey"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

        <TextView
            android:id="@+id/item_statement_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="17sp"
            tools:text="name"
            style="@style/Qc.TextCommonBlack"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/item_statement_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:maxLines="2"
            tools:text="status"
            style="@style/Qc.TextCommonGrey"
            />
      </LinearLayout>


      <TextView
          android:id="@+id/item_statement_time_shop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="5月"
          style="@style/Qc.TextCommonGrey"
          />

      <TextView
          android:id="@+id/item_card_cost"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="5月"
          style="@style/Qc.TextCommonGrey"
          />

      <TextView
          android:id="@+id/item_checkout_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="5月"
          style="@style/Qc.TextCommonGrey"
          />
    </LinearLayout>

  </LinearLayout>


  <ImageView
      android:id="@+id/item_statement_detail_pic"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_centerVertical="true"
      android:layout_marginLeft="75dp"
      android:background="@drawable/bg_border_black"
      android:padding="0.5dp"
      android:scaleType="fitXY"
      android:src="@drawable/img_default_checkinphoto"
      />
</RelativeLayout>
