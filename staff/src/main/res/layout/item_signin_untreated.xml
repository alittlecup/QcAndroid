<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    app:cardBackgroundColor="#00000000"
    app:cardElevation="0dp"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#00000000"
      android:orientation="vertical"
      >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8cb5ba"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

        <ImageView
            android:id="@+id/img_signin_item_face"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_border_white"
            android:padding="0.5dp"
            android:src="@drawable/ic_action_group"
            />

        <TextView
            android:id="@+id/tv_signin_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_signin_item_face"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_signin_item_face"
            android:layout_toRightOf="@+id/img_signin_item_face"
            android:text="陈驰远"
            android:textColor="@color/white"
            android:textSize="@dimen/common_font"
            />

        <ImageView
            android:id="@+id/iv_signin_item_gender"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/tv_signin_item_name"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tv_signin_item_name"
            android:layout_toRightOf="@+id/tv_signin_item_name"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gender_signal_female"
            />

        <TextView
            android:id="@+id/tv_signin_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_signin_item_name"
            android:layout_alignStart="@+id/tv_signin_item_name"
            android:layout_below="@+id/iv_signin_item_gender"
            android:layout_marginTop="5dp"
            android:text="@string/sign_in_untreated_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/min_font"
            />

        <TextView
            android:id="@+id/tv_signin_item_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_signin_item_phone"
            android:layout_alignStart="@+id/tv_signin_item_phone"
            android:layout_below="@+id/tv_signin_item_phone"
            android:layout_marginTop="5dp"
            android:text="@string/sign_in_untreated_card"
            android:textColor="@color/white"
            android:textSize="@dimen/min_font"
            />

        <TextView
            android:id="@+id/tv_signin_item_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_signin_item_card"
            android:layout_alignStart="@+id/tv_signin_item_card"
            android:layout_below="@+id/tv_signin_item_card"
            android:layout_marginTop="5dp"
            android:text="@string/sign_in_untreated_fee"
            android:textColor="@color/white"
            android:textSize="@dimen/min_font"
            />

      </RelativeLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="12dp"
          android:background="@color/white"
          android:orientation="vertical"
          >

        <LinearLayout
            android:id="@+id/ll_signin_untreated_locker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="13dp"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="13dp"
              android:text="@string/sign_in_untreated_gui"
              android:textSize="@dimen/common_font"
              />

          <TextView
              android:id="@+id/tv_signin_item_gui"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_marginBottom="0dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="0dp"
              android:layout_weight="1"
              android:drawablePadding="8dp"
              android:drawableRight="@drawable/ic_arrow_right"
              android:gravity="right|center_vertical"
              android:text="@string/sign_in_untreated_choose"
              android:textSize="@dimen/common_font"
              />

        </LinearLayout>

        <include layout="@layout/divider_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

          <LinearLayout
              android:id="@+id/ll_signin_item_ignor"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              >

            <TextView
                android:id="@+id/tv_signin_item_ignor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="@string/sign_in_untreated_ignor"
                android:textSize="@dimen/common_font"
                />
          </LinearLayout>


          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:background="@color/divider_grey"
              />

          <LinearLayout
              android:id="@+id/ll_signin_item_confirm"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center"
              >

            <TextView
                android:id="@+id/tv_signin_item_confirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="13dp"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="@string/sign_in_untreated_confirm"
                android:textColor="#0DB14B"
                android:textSize="@dimen/common_font"
                />
          </LinearLayout>

        </LinearLayout>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_signin_item_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="horizontal"
          >

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="#8cb5ba"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/tv_signin_item_course"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:text="@string/sign_in_untreated_class"
              android:textSize="@dimen/common_font"
              />

          <android.support.v7.widget.RecyclerView
              android:id="@+id/recyclerview_signin_item_course"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="12dp"
              android:layout_marginTop="10dp"
              >

          </android.support.v7.widget.RecyclerView>
        </LinearLayout>
      </LinearLayout>
      <!-- 波浪线 -->
      <LinearLayout
          android:id="@+id/ll_line"
          android:layout_width="match_parent"
          android:layout_height="9dp"
          android:background="@drawable/bg_signin_item_line"
          android:orientation="horizontal"
          android:visibility="visible"
          />
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>