<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical"
    >
  <FrameLayout
      android:id="@+id/fl_toolbar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/ck_gym_background"
      >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Qc.toolbarStyle"
        app:popupTheme="@style/ToolbarStyle.Overflow"
        app:theme="@style/Qc.toolbarStyle"
        app:titleTextAppearance="@style/ToolbarStyle"
        >
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          >
        <LinearLayout
            android:id="@+id/ll_title_below"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:visibility="visible"
            >
          <TextView
              android:id="@+id/toolbar_left"
              android:layout_width="wrap_content"
              android:layout_height="?attr/actionBarSize"
              android:gravity="center_vertical"
              android:text="添加场馆"
              android:textColor="@color/white"
              android:visibility="visible"
              />
          <Space
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1"
              />

          <RelativeLayout
              android:id="@+id/schedule_notification_layout"
              android:layout_width="?attr/actionBarSize"
              android:layout_height="?attr/actionBarSize"
              tools:visibility="gone"
              >
            <ImageView
                android:id="@+id/schedule_notification"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_actionbar_notification"
                android:visibility="gone"
                tools:visibility="visible"
                />
            <TextView
                android:id="@+id/schedule_notification_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11dp"
                android:background="@drawable/bg_notification"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="gone"
                tools:text="99"
                tools:visibility="visible"
                />

          </RelativeLayout>
          <LinearLayout
              android:id="@+id/ll_scan"
              android:layout_width="wrap_content"
              android:layout_height="?attr/actionBarSize"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="15dp"
              android:gravity="center"
              android:orientation="vertical"
              android:visibility="visible"
              >
            <ImageView
                android:id="@+id/img_scan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_gym_detail_scan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textColor="@color/bg_white"
                android:textSize="10sp"
                />

          </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_title_above"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:visibility="gone"
            >
          <Space
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1"
              />
          <ImageView
              android:id="@+id/img_cash"
              android:layout_width="?attr/actionBarSize"
              android:layout_height="match_parent"
              android:padding="5dp"
              app:srcCompat="@drawable/ic_cash_line"
              />
          <ImageView
              android:id="@+id/img_cash_scan"
              android:layout_width="?attr/actionBarSize"
              android:layout_height="?attr/actionBarSize"
              android:padding="5dp"
              app:srcCompat="@drawable/ic_scan_line"
              />
          <ImageView
              android:id="@+id/img_charge_card"
              android:layout_width="?attr/actionBarSize"
              android:layout_height="?attr/actionBarSize"
              android:padding="5dp"
              app:srcCompat="@drawable/ic_charge_line"
              />


          <ImageView
              android:id="@+id/img_new_card"
              android:layout_width="?attr/actionBarSize"
              android:layout_height="?attr/actionBarSize"
              android:padding="5dp"

              app:srcCompat="@drawable/ic_newcard_line"
              />


        </LinearLayout>
      </FrameLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        >
      <TextView
          android:id="@+id/toolbar_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="center"
          android:maxWidth="130dp"
          android:singleLine="true"
          android:textColor="@color/white"
          android:textSize="16sp"
          tools:text="测试场馆名称长度测试场馆名称长度"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:id="@+id/down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:scaleType="fitXY"
          android:tint="@color/bg_white"
          app:srcCompat="@drawable/ic_arrow_down_black_16dp"
          />
    </LinearLayout>

  </FrameLayout>

  <android.support.design.widget.CoordinatorLayout
      android:id="@+id/root_scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/fl_toolbar_layout"
      android:fillViewport="true"
      >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/layout_collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
      <android.support.design.widget.CollapsingToolbarLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/ck_gym_background"
          app:layout_scrollFlags="scroll|snap"
          >
        <LinearLayout
            android:id="@+id/ll_checkout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center_vertical"
            app:layout_collapseMode="parallax"
            >
          <FrameLayout
              android:id="@+id/fl_cash"
              android:layout_width="0dp"
              android:layout_height="90dp"
              android:layout_weight="1"
              >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_cash"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp"
                android:text="直接收银"
                android:textColor="@color/bg_white"
                android:textSize="13sp"
                />
          </FrameLayout>
          <FrameLayout
              android:id="@+id/fl_scan"
              android:layout_width="0dp"
              android:layout_height="90dp"
              android:layout_weight="1"
              >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ck_ic_scan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp"
                android:text="二维码收款"
                android:textColor="@color/bg_white"
                android:textSize="13sp"
                />
          </FrameLayout>
          <FrameLayout
              android:id="@+id/fl_charge_card"
              android:layout_width="0dp"
              android:layout_height="90dp"
              android:layout_weight="1"
              >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_charge"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp"
                android:text="会员卡续卡"
                android:textColor="@color/bg_white"
                android:textSize="13sp"
                />
          </FrameLayout>
          <FrameLayout
              android:id="@+id/fl_new_card"
              android:layout_width="0dp"
              android:layout_height="90dp"
              android:layout_weight="1"
              >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_newcard"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="12dp"
                android:text="新开会员卡"
                android:textColor="@color/bg_white"
                android:textSize="13sp"
                />
          </FrameLayout>


        </LinearLayout>
      </android.support.design.widget.CollapsingToolbarLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:minHeight="266.5dp"
          android:orientation="vertical"
          app:layout_scrollFlags="scroll|enterAlwaysCollapsed|enterAlways"
          >

        <LinearLayout
            android:id="@+id/layout_to_charge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/primary_horizon_to_dark"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            >
          <cn.qingchengfit.support.widgets.CompatTextView
              android:id="@+id/tv_price"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="@string/underline_pro_update_now"
              android:textColor="#00a5ac"
              android:textSize="@dimen/txt_15sp"
              app:drawableStart="@drawable/vd_upgrade_arrow"
              />
          <ImageView
              android:id="@+id/btn_close"
              android:layout_width="50dp"
              android:layout_height="match_parent"
              android:padding="15dp"
              android:translationX="15dp"
              app:srcCompat="@drawable/vd_close_primary_24dp"
              />
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_charts"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            />

        <include layout="@layout/divider_grey"/>

        <cn.qingchengfit.staffkit.views.custom.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/white"
            app:ci_drawable="@drawable/splash_indicator_doc"
            />

      </LinearLayout>


      <TextView
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:text="@string/offen_funs"
          android:textColor="@color/text_black"
          style="@style/TextTitleHint"
          />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

      <android.support.v7.widget.RecyclerView
          android:id="@+id/recycleview"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="@color/bg_grey"
          />

    </LinearLayout>


  </android.support.design.widget.CoordinatorLayout>

  <LinearLayout
      android:id="@+id/gym_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/fl_toolbar_layout"
      android:background="@color/toolbar"
      android:gravity="center_vertical"
      android:minHeight="72dp"
      android:orientation="vertical"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:transformPivotY="0dp"
      android:visibility="gone"
      tools:visibility="visible"

      >

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        tools:src="@drawable/ic_test"
        />
    
    <RelativeLayout
        android:id="@+id/gym_info_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <LinearLayout
          android:id="@+id/ll_gym_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/gym_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="179dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="中美引力是个非常有趣的工作室"
            />

        <ImageView
            android:id="@+id/tag_pro"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:text="PRO"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:srcCompat="@drawable/ic_pro_green"
            />
      </LinearLayout>
      <TextView
          android:id="@+id/gym_su"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/font_divider"
          android:maxLines="3"
          android:layout_below="@+id/ll_gym_title"
          android:maxWidth="150dp"
          android:textColor="@color/white"
          android:textSize="13sp"
          tools:text="123123123122"
          />
      <Button
          android:id="@+id/recharge"
          android:layout_width="60dp"
          android:layout_height="30dp"
          android:background="@drawable/bg_rect_prime"
          android:text="续费"
          android:layout_alignParentRight="true"
          android:textColor="@color/colorPrimary"
          android:textSize="13sp"

          />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/partner_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

  </LinearLayout>
  <include
      layout="@layout/wx_view_bottom_short_action"
      android:id="@+id/include_bottom"
      />
  <FrameLayout
      android:id="@+id/top_frag"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

  <FrameLayout
      android:id="@+id/other_frag"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

</RelativeLayout>
