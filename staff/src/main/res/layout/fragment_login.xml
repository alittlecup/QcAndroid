<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

  <FrameLayout
      android:id="@+id/frag_protocol"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <cn.qingchengfit.widgets.PhoneEditText
      android:id="@+id/login_phone"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      android:layout_marginTop="20dp"
      />

  <include layout="@layout/divider_grey_left_right"/>

  <cn.qingchengfit.widgets.PasswordView
      android:id="@+id/pw_view"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      android:layout_marginTop="20dp"
      app:pw_mode="true"
      />

  <include layout="@layout/divider_grey_left_right"/>

  <include
      layout="@layout/layout_agree_protocol"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:orientation="vertical"
      >

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:layout_weight="1"
        android:background="@drawable/bg_login_button"
        android:orientation="horizontal"
        android:textSize="@dimen/btn_font"
        android:text="@string/login_btn_label"
        />

    <ToggleButton
        android:id="@+id/forgetpw_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_black"
        android:textOff="验证码登录"
        android:textOn="密码登录"
        android:textSize="@dimen/btn_font"
        />

  </LinearLayout>


</LinearLayout>

