<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_toolbar"/>

  <FrameLayout
      android:id="@+id/bg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/bg_qr_code"
      >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="280dp"
        android:layout_height="330dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:layerType="software"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:translationZ="0dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_rect_grey_corner"
            android:gravity="center"
            android:text="签出二维码"
            style="@style/Qc.TextCommonBlack"
            />

        <ImageView
            android:id="@+id/qr_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/test_img"
            />

        <TextView
            android:id="@+id/hint"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="出示此二维码,让会员通过微信扫一扫等工具扫码"

            />
      </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_scan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="415dp"
        android:text="扫描会员入场码"
        android:textSize="14sp"
        android:background="@drawable/btn_qc_rect_round_coner_grey"
        android:textColor="@color/colorPrimary"
        />

  </FrameLayout>
</LinearLayout>
