<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/hint"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      style="@style/TextTitleHint"
      />

  <cn.qingchengfit.staffkit.views.custom.ExpandedLayout
      android:id="@+id/sw_key"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      android:background="@color/white"
      app:el_expanded="true"
      app:el_label="团课开始前提醒会员"
      >

    <cn.qingchengfit.staffkit.views.custom.CommonInputView
        android:id="@+id/sw_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:civ_inputnum="true"
        app:civ_lable="课程开始前（分钟）"
        />
  </cn.qingchengfit.staffkit.views.custom.ExpandedLayout>

  <View
      android:id="@+id/divider"
      android:layout_width="match_parent"
      android:layout_height="@dimen/activity_vertical_margin"
      android:background="@color/bg_grey"
      />
</LinearLayout>