<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="38dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:text="分享给朋友"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:id="@+id/wechat_friend"

        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_margin="6dp"
          app:srcCompat="@drawable/ic_share_wechat"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:gravity="center_horizontal"
          android:paddingBottom="10dp"
          android:text="微信好友"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wechat_circle"

        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_margin="6dp"
          app:srcCompat="@drawable/ic_share_moment"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:gravity="center_horizontal"
          android:paddingBottom="10dp"
          android:text="朋友圈"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/copy_link"

        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_margin="6dp"
          app:srcCompat="@drawable/ic_share_copylink"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:gravity="center_horizontal"
          android:text="复制链接"
          />
    </LinearLayout>


  </LinearLayout>

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:id="@+id/btn_to_wechat_public"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      >

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ic_share_subscription"
        />

    <Space
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/connect_to_wechat_public"
        style="@style/Qc.TextCommonBlack"
        />

    <TextView
        android:id="@+id/connect_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未对接"
        android:textSize="@dimen/min_font"
        style="@style/Qc.TextCommonGrey"
        />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@drawable/ic_triangle_right"
        />
  </LinearLayout>

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:id="@+id/btn_home_qr"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      >

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ic_share_qrcode"

        />

    <Space
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="会员端页面二维码"
        style="@style/Qc.TextCommonBlack"
        />

  </LinearLayout>

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:id="@+id/btn_more_popularize"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      >

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/ic_share_announce"

        />

    <Space
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="更多推广方式"
        style="@style/Qc.TextCommonBlack"
        />

  </LinearLayout>
  <LinearLayout
      android:id="@+id/layout_extends"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      />
  <Button
      android:id="@+id/bottom_cancel"
      android:layout_width="1dp"
      android:layout_height="1dp"
      android:visibility="gone"
      />
</LinearLayout>