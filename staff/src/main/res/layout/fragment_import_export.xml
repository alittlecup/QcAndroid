<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <include layout="@layout/common_simple_toolbar"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="15dp"
      android:orientation="vertical"
      android:background="@drawable/bg_sign_border_corner"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_student_import"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        />

    <TextView
        android:id="@+id/tv_import"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_student_import"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        style="@style/QcTextStyleLargeDark"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:layout_marginTop="20dp"
      android:orientation="vertical"
      android:background="@drawable/bg_sign_border_corner"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_student_export"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        />

    <TextView
        android:id="@+id/tv_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_student_export"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        style="@style/QcTextStyleLargeDark"
        />

  </LinearLayout>

</LinearLayout>