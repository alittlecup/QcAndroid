<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_toolbar"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:minHeight="50dp"
          android:orientation="horizontal"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          >

        <TextView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="收件人:"
            />

        <TextView
            android:id="@+id/tv_students"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            tools:text="@string/test_long"

            />

        <ToggleButton
            android:id="@+id/tg_show_students"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textOff="@string/detail"
            android:textOn="@string/hide"
            />
      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/top_line_left_16dp"
          android:minHeight="50dp"
          android:orientation="horizontal"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          >

        <TextView
            android:id="@+id/label_save_time"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="保存时间:"
            />

        <TextView
            android:id="@+id/tv_save_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            style="@style/Qc.TextCommonBlack"
            />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_sender"
          android:layout_width="match_parent"
          android:layout_height="68dp"
          android:background="@drawable/top_line_left_16dp"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:paddingRight="@dimen/activity_horizontal_margin"
          >

        <TextView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="发送人:"
            />

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            tools:src="@drawable/default_manage_male"
            />

        <Space
            android:layout_width="@dimen/little"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/tv_sender_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="xxx"
              style="@style/Qc.TextCommonBlack"
              />

          <TextView
              android:id="@+id/tv_sender_phone"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/min_font"
              tools:text="xxx"
              style="@style/Qc.TextCommonGrey"
              />
        </LinearLayout>
      </LinearLayout>

      <include layout="@layout/divider_grey"/>

      <TextView
          android:id="@+id/tv_content"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="top"
          android:padding="@dimen/activity_horizontal_margin"
          tools:text="@string/test_long"
          style="@style/Qc.TextCommonBlack"
          />


    </LinearLayout>


  </ScrollView>

  <LinearLayout
      android:id="@+id/layout_opreate"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="bottom"
      android:background="@drawable/bg_rect_grey"
      android:baselineAligned="true"
      android:orientation="horizontal"
      android:paddingTop="1dp"
      >

    <LinearLayout
        android:id="@+id/btn_del"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_click"
        android:gravity="center"
        android:orientation="vertical"
        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/btn_msg_delete"
          />

      <Space
          android:layout_width="wrap_content"
          android:layout_height="5dp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/common_del"
          style="@style/Qc.TextCommonBlack"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_edit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_click"
        android:gravity="center"
        android:orientation="vertical"
        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/btn_msg_edit"
          />

      <Space
          android:layout_width="wrap_content"
          android:layout_height="5dp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/edit"
          style="@style/Qc.TextCommonBlack"
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_send"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_click"
        android:gravity="center"
        android:orientation="vertical"
        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/btn_msg_send"
          />

      <Space
          android:layout_width="wrap_content"
          android:layout_height="5dp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/common_send"
          style="@style/Qc.TextCommonBlack"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
