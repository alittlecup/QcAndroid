<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:civ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_toolbar"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="38dp"
      android:text="@string/base_info"
      style="@style/TextTitleHint"
      />

  <include layout="@layout/divider_grey"/>

  <RelativeLayout
      android:id="@+id/header_layout"
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:background="@color/white"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/course_picture"
        />

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_default_header"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right"
        />
  </RelativeLayout>

  <include layout="@layout/divider_grey_left_right"/>

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/name"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      civ:civ_lable="@string/name_call"
      />

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/course_length"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      civ:civ_inputnum="true"
      civ:civ_lable="@string/course_length"
      />

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/min_num"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      civ:civ_lable="@string/course_min_num"
      />

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/course_plan"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      civ:civ_lable="@string/default_course_plan"
      civ:civ_showdivier="false"
      civ:civ_showright="true"
      />

  <include layout="@layout/divider_grey"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="38dp"
      android:text="@string/suit_gyms"
      style="@style/TextTitleHint"
      />

  <include layout="@layout/divider_grey"/>

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/suit_gyms"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      civ:civ_lable="@string/suit_gyms"
      civ:civ_showdivier="false"
      civ:civ_showright="true"
      />

  <include layout="@layout/divider_grey"/>

</LinearLayout>