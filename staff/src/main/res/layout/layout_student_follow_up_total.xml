<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      >

    <TextView
        android:id="@+id/tv_student_total_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="会员状态"
        android:textColor="@color/qc_text_grey"
        android:textSize="@dimen/common_font"
        />

    <include layout="@layout/divider_grey"/>

    <LinearLayout
        android:id="@+id/ll_student_status_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        >

      <View
          android:layout_width="6dp"
          android:layout_height="6dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/shap_circle_statu_0"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|left"
          android:text="@string/qc_student_status_0"
          android:textColor="@color/qc_text_black"
          android:textSize="@dimen/common_font"
          />

      <TextView
          android:id="@+id/tv_student_count_status_0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawablePadding="6dp"
          android:drawableRight="@drawable/ic_arrow_right"
          android:gravity="center"
          android:textColor="@color/qc_text_grey"
          android:textSize="@dimen/min_font"
          tools:text="@string/qc_people_count_with_unit"
          />
    </LinearLayout>

    <include layout="@layout/divider_grey"/>

    <LinearLayout
        android:id="@+id/ll_student_status_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        >

      <View
          android:layout_width="6dp"
          android:layout_height="6dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/shap_circle_statu_1"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|left"
          android:text="@string/qc_student_status_1"
          android:textColor="@color/qc_text_black"
          android:textSize="@dimen/common_font"
          />

      <TextView
          android:id="@+id/tv_student_count_status_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawablePadding="6dp"
          android:drawableRight="@drawable/ic_arrow_right"
          android:gravity="center"
          android:textColor="@color/qc_text_grey"
          android:textSize="@dimen/min_font"
          tools:text="@string/qc_people_count_with_unit"
          />
    </LinearLayout>

    <include layout="@layout/divider_grey"/>

    <LinearLayout
        android:id="@+id/ll_student_status_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        >

      <View
          android:layout_width="6dp"
          android:layout_height="6dp"
          android:layout_marginRight="8dp"
          android:background="@drawable/shap_circle_statu_2"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center_vertical|left"
          android:text="@string/qc_student_status_2"
          android:textColor="@color/qc_text_black"
          android:textSize="@dimen/common_font"
          />

      <TextView
          android:id="@+id/tv_student_count_status_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawablePadding="6dp"
          android:drawableRight="@drawable/ic_arrow_right"
          android:gravity="center"
          android:textColor="@color/qc_text_grey"
          android:textSize="@dimen/min_font"
          tools:text="@string/qc_people_count_with_unit"
          />
    </LinearLayout>
  </LinearLayout>
</merge>