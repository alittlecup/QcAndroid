<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:bind="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_time_start"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:civ_lable="开始时间"
        app:civ_edit_able="false"

        app:civ_showright="true"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_time_end"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:civ_lable="结束时间"
        app:civ_edit_able="false"
        app:civ_showright="true"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_time_week"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:civ_lable="周期"
        app:civ_edit_able="false"
        app:civ_showright="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="有效时长"
          style="@style/QcTextStyleMediumDark"
          />
      <TextView
          android:id="@+id/tv_duration_content"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          tools:text="2小时内入场不重复扣费"
          style="@style/QcTextStyleMediumDark"
          />
      <TextView
          android:id="@+id/tv_change_duration"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:text="修改"
          android:textColor="@color/colorPrimary"
          android:textSize="14sp"
          />


    </LinearLayout>

    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_train_count"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:civ_lable="自主训练人数上限"
        app:civ_showright="false"
        app:civ_edit_able="true"
        app:civ_inputnum="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="结算方式"
        style="@style/QcTextStyleMediumGrey"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_pay_once"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:civ_lable="单次支付"
        app:civ_edit_able="false"

        app:civ_showright="true"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_pay_card"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:civ_lable="会员卡结算"
        app:civ_edit_able="false"

        app:civ_showright="true"
        />


  </LinearLayout>
</layout>
