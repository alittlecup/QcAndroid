<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    >

  <LinearLayout
      android:id="@+id/ll_card_type_filter"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      >

    <TextView
        android:id="@+id/text_card_type_filter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/cardtype"
        android:textColor="@color/qc_text_black"
        android:textSize="12dp"
        />

    <ImageView
        android:id="@+id/image_type_arrow"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        app:srcCompat="@drawable/vector_arrow_down_grey"
        />

  </LinearLayout>

  <include
      layout="@layout/divider_grey_vertical"
      android:layout_width="1px"
      android:layout_height="match_parent"
      android:layout_margin="12dp"
      />

  <LinearLayout
      android:id="@+id/ll_card_state_filter"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center"
      >

    <TextView
        android:id="@+id/text_card_status_filter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/filter_card_state"
        android:textColor="@color/qc_text_black"
        android:textSize="12dp"
        />

    <ImageView
        android:id="@+id/image_state_arrow"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        app:srcCompat="@drawable/vector_arrow_down_grey"
        />
  </LinearLayout>

</LinearLayout>