<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

  <RelativeLayout
      android:id="@+id/ll_filter_condition"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      >

    <TextView
        android:id="@+id/tv_card_filter_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:paddingBottom="11.5dp"
        android:paddingTop="11.5dp"
        android:textColor="@color/qc_text_black"
        android:textSize="12dp"
        tools:text="全部会员卡种类"
        />

    <ImageView
        android:id="@+id/image_filter_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_green_right"
        tools:visibility="visible"
        />

    <include
        layout="@layout/divider_grey_left_right"
        android:id="@+id/list_divider_bottom"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        />
  </RelativeLayout>

</RelativeLayout>