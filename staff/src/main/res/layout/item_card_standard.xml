<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

  <View
      android:layout_width="4dp"
      android:layout_height="14dp"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginStart="@dimen/activity_horizontal_margin"
      android:background="@color/green"
      />

  <TextView
      android:id="@+id/card_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="25dp"
      android:layout_marginStart="25dp"
      android:textColor="@color/text_black"
      android:textSize="14sp"
      tools:text="储值12000元"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginEnd="80dp"
      android:layout_marginRight="80dp"
      android:text="@string/real_income"

      />

  <TextView
      android:id="@+id/income"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginEnd="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:textColor="@color/red"
      tools:text="10000元"
      />

  <TextView
      android:id="@+id/validity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/card_content"
      android:layout_alignStart="@id/card_content"
      android:layout_below="@id/card_content"
      android:layout_marginTop="4dp"
      android:textSize="12sp"
      tools:text="期限:永久"

      />

  <TextView
      android:id="@+id/recharge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/validity"
      android:layout_alignStart="@id/validity"
      android:layout_below="@id/validity"
      android:layout_marginTop="4dp"
      android:textSize="12sp"
      tools:text="期限:永久"

      />
</RelativeLayout>
