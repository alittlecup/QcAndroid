<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    >


  <View
      android:id="@+id/item_statement_detail_bottomdivier"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"
      android:background="@color/divider_white"
      >
  </View>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:orientation="horizontal"
      >

    <View
        android:id="@+id/item_statement_detail_headerdivier"
        android:layout_width="97.5dp"
        android:layout_height="1dp"
        android:background="@color/divider_white"
        >
    </View>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_white"
        >
    </View>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:divider="@drawable/divier_linear_nomargin"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:showDividers="middle"
      >

    <LinearLayout
        android:id="@+id/item_statement_detail_date"
        android:layout_width="97.5dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:id="@+id/item_statement_detail_day"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="0dp"
          android:textSize="28sp"
          tools:text="11"
          style="@style/Qc.TextCommonBlack"
          />

      <TextView
          android:id="@+id/item_statement_detail_month"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-5dp"
          android:paddingBottom="3dp"
          android:textSize="12sp"
          tools:text="5月"
          style="@style/Qc.TextCommonGrey"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/item_statement_detail_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:textSize="17sp"
          tools:text="@string/test_long"
          style="@style/Qc.TextCommonBlack"
          />

      <TextView
          android:id="@+id/item_statement_time_shop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="5月"
          style="@style/Qc.TextCommonGrey"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/item_card_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            tools:text="5月ada"
            style="@style/Qc.TextCommonGrey"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:text="实收:"
            />

        <cn.qingchengfit.support.widgets.CompatTextView
            android:id="@+id/text_real_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawablePadding="6dp"
            android:gravity="right"
            app:drawableEnd="@drawable/ic_smallarrow_right"
            android:paddingRight="5dp"
            android:maxLines="1"
            android:textColor="@color/text_orange"
            tools:text="20"
            />
      </LinearLayout>
    </LinearLayout>

  </LinearLayout>


  <ImageView
      android:id="@+id/item_statement_detail_pic"
      android:layout_width="45dp"
      android:layout_height="45dp"
      android:layout_centerVertical="true"
      android:layout_marginLeft="75dp"
      android:background="@color/white"
      android:scaleType="fitXY"
      tools:src="@drawable/head"
      />

  <ImageView
      android:id="@+id/image_course_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/item_statement_detail_pic"
      android:layout_alignRight="@id/item_statement_detail_pic"
      tools:src="@drawable/vd_course_group_conner"
      />

</RelativeLayout>