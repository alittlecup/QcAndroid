<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:baselineAligned="false"
    android:divider="@drawable/divier_linear"
    android:orientation="horizontal"
    android:showDividers="middle"
    >

  <LinearLayout
      android:id="@+id/order_today"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="?android:attr/selectableItemBackground"
      android:dividerPadding="10dp"
      android:gravity="center"
      android:orientation="vertical"

      >

    <TextView
        android:id="@+id/info_titile_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_order_today"
        />

    <TextView
        android:id="@+id/info_count_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        style="@style/Qc.TextCommonBlack"
        />


  </LinearLayout>

  <LinearLayout
      android:id="@+id/week_order"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="?android:attr/selectableItemBackground"
      android:dividerPadding="10dp"
      android:gravity="center"
      android:orientation="vertical"

      >

    <TextView
        android:id="@+id/info_titile_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_order_tomorrow"
        />

    <TextView
        android:id="@+id/info_count_2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        style="@style/Qc.TextCommonBlack"
        />


  </LinearLayout>

  <LinearLayout
      android:id="@+id/month_order"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="?android:attr/selectableItemBackground"
      android:dividerPadding="10dp"
      android:gravity="center"
      android:orientation="vertical"

      >

    <TextView
        android:id="@+id/info_titile_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_newadd_today"
        />

    <TextView
        android:id="@+id/info_count_3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        style="@style/Qc.TextCommonBlack"
        />


  </LinearLayout>
</LinearLayout>
