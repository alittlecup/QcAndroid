<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/ll_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/toolbar"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:id="@+id/ll_top_container"
          android:layout_width="0dp"
          android:layout_height="32dp"
          android:layout_marginBottom="6dp"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="6dp"
          android:layout_weight="1"
          android:background="@drawable/bg_white_corners"
          android:gravity="center_vertical"
          >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:tint="@color/text_grey"
            app:srcCompat="@drawable/vd_search_black"
            />
        <EditText
            android:id="@+id/edit_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            tools:text="搜索搜索搜索搜索搜索搜索"
            style="@style/QcTextStyleMediumDark"
            />
        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:tint="@color/text_grey"
            app:srcCompat="@drawable/vd_facial_clear_black"
            />

      </LinearLayout>
      <TextView
          android:id="@+id/tv_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:text="取消"
          android:textColor="@color/colorPrimary"
          style="@style/QcTextStyleStandardDark"
          />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <FrameLayout
          android:id="@+id/frag_container"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/bg_white"
          android:visibility="visible"

          />
      <LinearLayout
          android:id="@+id/common_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#aFFF"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          android:visibility="visible"
          >
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/text_grey"
            app:srcCompat="@drawable/vd_search_black"
            />
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="未找到搜索结果"
            style="@style/QcTextStyleMediumGrey"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            />
      </LinearLayout>
    </FrameLayout>


  </LinearLayout>
</layout>