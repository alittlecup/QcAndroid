<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_simple_toolbar"/>

  <RelativeLayout
      android:id="@+id/root_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context="cn.qingchengfit.staffkit.views.QRActivity"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <View
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="@color/halftransparent_grey"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="200dp"
          >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/halftransparent_grey"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_qr_scan"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/halftransparent_grey"
            />
      </LinearLayout>

      <TextView
          android:id="@+id/tv_tips"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="@color/halftransparent_grey"
          android:gravity="center_horizontal"
          android:paddingLeft="@dimen/quarter_width"
          android:paddingRight="@dimen/quarter_width"
          android:paddingTop="@dimen/activity_vertical_margin"
          android:textColor="@color/white"
          tools:text="@string/test_short"
          />
    </LinearLayout>


  </RelativeLayout>

</LinearLayout>
