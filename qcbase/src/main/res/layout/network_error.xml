<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
  <ImageView
      android:id="@+id/img_empty"
      android:layout_width="220dp"
      android:layout_height="120dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="80dp"
      android:scaleType="centerCrop"
      app:srcCompat="@drawable/vd_img_403"
      />

  <TextView
      android:id="@+id/tv_empty_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/text_empty_title"
      style="@style/QcTextStyleLargeDark"
      />

  <TextView
      android:id="@+id/tv_empty_hint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:gravity="center"
      tools:text="@string/text_empty_title"
      style="@style/QcTextStyleMediumWarm"
      />
  <Button
      android:id="@+id/network_btn"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_marginTop="17dp"
      android:text="重试"
      style="@style/QcBtnPrimarySecond"
      />

</LinearLayout>