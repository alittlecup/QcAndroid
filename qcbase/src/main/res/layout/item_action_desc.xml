<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    >
  <ImageView
      android:id="@+id/img_action"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:src="@drawable/vd_qc_logo"
      />
  <TextView
      android:id="@+id/title"
      style="@style/QcTextStyleMediumDark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="绑定会员"
      android:layout_marginLeft="34dp"
      android:layout_marginStart="34dp"
      />

  <TextView
      android:id="@+id/tv_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@id/title"
      android:layout_alignStart="@id/title"
      android:layout_below="@id/title"
      style="@style/QcTextStyleMediumGrey"
      android:layout_marginTop="@dimen/little"
      tools:text="随便"
      android:lines="1"
      android:ellipsize="end"
      android:textColor="@color/text_warm"
      />

  <ImageView
      android:id="@+id/img_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/vd_chevron_right_text_hint_7x12dp"
      android:layout_centerVertical="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      />
</RelativeLayout>