<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="true" android:state_pressed="false">

    <shape android:shape="rectangle">
      <corners android:radius="2dp"/>
      <solid android:color="#FAFAFA"/>
      <stroke android:color="@color/text_dark" android:width="1dp"/>
      <size android:height="35dp" android:width="130dp"/>
    </shape>

  </item>
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="2dp"/>
      <solid android:color="@color/transparent"/>
      <stroke android:color="@color/text_grey" android:width="1dp"/>
      <size android:height="35dp" android:width="130dp"/>
    </shape>
  </item>
  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <corners android:radius="2dp"/>
      <solid android:color="@color/transparent"/>
      <stroke android:color="@color/divider_dark" android:width="1dp"/>
      <size android:height="35dp" android:width="130dp"/>
    </shape>
  </item>
</selector>