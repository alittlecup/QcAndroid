<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Qc.CheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:button">@drawable/selector_qc_checkbox</item>
  </style>

  <style name="Qc.CheckBox2" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:button">@drawable/selector_qc_checkbox_2</item>
  </style>

  <style name="QcBtnNomal"
      >

  </style>

  <style name="QcBtnPrimery">
    <item name="android:background">@drawable/btn_prime</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="QcBtnGreyRectCorner"
      >
    <item name="android:background">@drawable/btn_qc_rect_round_coner_grey</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>


  <style name="QcCivClickStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/qc_item_height</item>
    <item name="civ_text_color">@color/qc_text_black</item>
    <item name="civ_hint">@string/please_choose</item>
    <item name="civ_showdivier">true</item>
    <item name="civ_showright">true</item>
    <item name="civ_clickable">true</item>
  </style>

  <style name="QcCivInputStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/qc_item_height</item>
    <item name="civ_text_color">@color/qc_text_black</item>
    <item name="civ_hint">@string/please_input</item>
    <item name="civ_showdivier">true</item>
  </style>

  <style name="QcFilterStyle">
    <item name="ft_vc_drawable_on">@drawable/vd_filter_arrow_up</item>
    <item name="ft_vc_drawable_off">@drawable/vd_filter_arrow_down</item>
    <item name="ft_color_on">@color/text_black</item>
    <item name="ft_color_off">@color/text_black</item>
    <item name="ft_text_size">13sp</item>
  </style>

  <style name="QcFilterStyle_Dark">
    <item name="ft_vc_drawable_on">@drawable/vd_filter_arrow_up</item>
    <item name="ft_vc_drawable_off">@drawable/vd_filter_arrow_down</item>
    <item name="ft_color_on">@color/colorPrimary</item>
    <item name="ft_color_off">@color/white</item>
    <item name="ft_text_size">13sp</item>
  </style>

  <style name="TagGroup.Qc" parent="@style/TagGroup">
    <item name="atg_borderColor">?colorPrimary</item>
    <item name="atg_textSize">@dimen/txt_stanrdant</item>
    <item name="atg_textColor">?colorPrimary</item>
  </style>

  <style name="QcRadioBtn">
    <item name="cb_background_normal">@drawable/shape_bg_rect_grey_corner4</item>
    <item name="cb_background_select">@drawable/bg_rect_corner_primary</item>
    <item name="cb_hook_icon_location">left</item>
    <item name="cb_hook_icon_select">@drawable/selector_student_checkbtn_bg</item>
    <item name="cb_select">false</item>
    <item name="cb_text_normal_color">@color/qc_text_black</item>
    <item name="cb_text_select_color">?colorPrimary</item>
  </style>

  <style name="QcTabLayout">
    <item name="android:background">@color/white</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="tabGravity">center</item>
    <item name="tabIndicatorColor">@color/colorPrimary</item>
    <item name="tabMode">fixed</item>
    <item name="tabMaxWidth">100dp</item>
    <item name="tabSelectedTextColor">@color/colorPrimary</item>
    <item name="tabBackground">@drawable/bg_click</item>
    <item name="tabTextAppearance">@style/QcTextStyleStandardGrey</item>
  </style>
  <style name="QcTabLayoutDark">
    <item name="android:background">@color/toolbar</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">50dp</item>
    <item name="tabGravity">center</item>
    <item name="tabIndicatorColor">@color/colorPrimary</item>
    <item name="tabMode">fixed</item>
    <item name="tabMaxWidth">100dp</item>
    <item name="tabSelectedTextColor">@color/colorPrimary</item>
    <item name="tabTextAppearance">@style/QcTextStyleStandardGrey</item>
  </style>
</resources>