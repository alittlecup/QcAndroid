<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="QcBaseTextStyle">
    <item name="android:freezesText">true</item>
  </style>

  <style name="QcTextStyleTitleBold" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_18sp</item>
    <item name="android:textColor">@color/text_dark</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="QcTextStyleTitleWhite" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_18sp</item>
    <item name="android:textColor">@color/bg_white</item>
    <item name="android:textStyle">bold</item>

  </style>

  <style name="QcTextStyleTitleRegular" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_18sp</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>

  <style name="QcTextStyleLargeDark" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_17sp</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>

  <style name="QcTextStyleLargeWarm" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_17sp</item>
    <item name="android:textColor">@color/text_warm</item>
  </style>

  <style name="QcTextStyleStandardDark" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_15sp</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>

  <style name="QcTextStyleStandardWarm" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_15sp</item>
    <item name="android:textColor">@color/text_warm</item>
  </style>

  <style name="QcTextStyleStandardGrey" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_15sp</item>
    <item name="android:textColor">@color/text_grey</item>
  </style>

  <style name="QcTextStyleStandardHint" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_15sp</item>
    <item name="android:textColor">@color/text_hint</item>
  </style>

  <style name="QcTextStyleStandardHint_item" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_15sp</item>
    <item name="android:textColor">@color/text_hint</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:background">@color/bg_grey</item>
  </style>

  <style name="QcTextStyleMediumDark" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_14sp</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>

  <style name="QcTextStyleMediumWarm" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_14sp</item>
    <item name="android:textColor">@color/text_warm</item>
  </style>

  <style name="QcTextStyleMediumGrey" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_14sp</item>
    <item name="android:textColor">@color/text_grey</item>
  </style>

  <style name="QcTextStyleSmallDark" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_13sp</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>

  <style name="QcTextStyleSmallWarm" parent="QcBaseTextStyle">
    <item name="android:textSize">13sp</item>
    <item name="android:textColor">@color/text_warm</item>
  </style>

  <style name="QcTextStyleSmallGrey" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_13sp</item>
    <item name="android:textColor">@color/text_grey</item>
  </style>

  <style name="QcTextStyleXsDark" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_12sp</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>

  <style name="QcTextStyleXsWarm">
    <item name="android:textSize">@dimen/txt_12sp</item>
    <item name="android:textColor">@color/text_warm</item>
  </style>

  <style name="QcTextStyleXsGrey" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_12sp</item>
    <item name="android:textColor">@color/text_grey</item>
  </style>

  <style name="QcTagStyle">
    <item name="android:textSize">@dimen/txt_12sp</item>
    <item name="android:textColor">@color/text_orange</item>
    <item name="android:background">@drawable/bg_tag_orange</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingBottom">2dp</item>
  </style>

  <style name="QcTextStyleTinyDark" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_10sp</item>
    <item name="android:textColor">@color/text_dark</item>
  </style>

  <style name="QcTextStyleTinyGrey" parent="QcBaseTextStyle">
    <item name="android:textSize">@dimen/txt_10sp</item>
    <item name="android:textColor">@color/text_grey</item>
  </style>
</resources>