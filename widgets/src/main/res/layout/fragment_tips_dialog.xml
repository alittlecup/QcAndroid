<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    style="@style/AppTheme"
    >

  <ImageView
      android:id="@+id/img_close_tips"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:src="@drawable/cwac_cam2_ic_close"
      />

  <ImageView
      android:id="@+id/img_tips_top"
      android:layout_width="60dp"
      android:layout_height="60dp"
      tools:src="@drawable/ic_gender_signal_female"
      />

  <TextView
      android:id="@+id/text_tips"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      android:gravity="center"
      tools:text="您的场馆没有参加本期招聘会，无法发出邀约/与TA沟通"
      style="@style/QcTextStyleLargeWarm"
      />


  <include layout="@layout/divider_grey"/>

  <TextView
      android:id="@+id/text_button_click"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingBottom="13dp"
      android:paddingTop="13dp"
      android:textColor="@color/qc_allotsale_green"
      android:textSize="17sp"
      tools:text="申请参加招聘会"
      />

</LinearLayout>