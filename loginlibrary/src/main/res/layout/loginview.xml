<?xml version="1.0" encoding="utf-8"?>
<com.paper.loginlibrary.LoginView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/paper_common_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:text="13601218507"
            />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/login_checkcode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_phone_num"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout

            android:id="@+id/login_phone_verity"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/login_getcode_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/paper_item_height"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_gravity="bottom"
            android:text="@string/login_getcode" />
    </LinearLayout>

    <Button

        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paper_item_height"
        android:layout_below="@id/login_checkcode_layout"
        android:orientation="horizontal"
        android:text="@string/login_btn_lable">
    </Button>
    <Button
        android:id="@+id/goregiste_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paper_item_height"
        android:layout_below="@id/login_btn"
        android:orientation="horizontal"
        android:text="@string/registe_btn_lable">
    </Button>

    <Button
        android:id="@+id/forgetpw_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paper_item_height"
        android:layout_below="@id/goregiste_btn"
        android:orientation="horizontal"
        android:text="@string/login_forgotpw">
    </Button>
</com.paper.loginlibrary.LoginView>