<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
    <variable
        name="viewModel"
        type="cn.qingchengfit.checkout.view.checkout.CheckoutMoneyViewModel"/>
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_grey"
        android:orientation="vertical"
        android:paddingRight="35dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_marginTop="55dp"
          android:text="请输入收款金额,最高¥20000"
          style="@style/QcTextStyleStandardGrey"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:gravity="right"
          android:orientation="horizontal"
          >
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:minWidth="30dp"
            android:text="¥"
            android:textColor="@color/text_grey"
            android:textSize="48sp"
            />
        <EditText
            android:id="@+id/ed_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:maxLength="9"
            android:editable="false"
            android:ellipsize="none"
            android:text="@{viewModel.count}"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="48sp"
            tools:text="2.88000000"
            />

      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          app:visibleGone="@{viewModel.showOverPrices(viewModel.count)}"
          android:layout_marginTop="5dp"
          android:text="已超过限额"
          android:textColor="@color/danger_red_normal"
          style="@style/QcTextStyleStandardGrey"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="3"
          android:orientation="vertical"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
          <TextView
              android:id="@+id/tv_1"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="1"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_2"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="2"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_3"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="3"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_medium"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
          <TextView
              android:id="@+id/tv_4"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="4"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_5"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="5"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_6"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="6"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_medium"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
          <TextView
              android:id="@+id/tv_7"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="7"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_8"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="8"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_9"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="9"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_medium"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
          <TextView
              android:id="@+id/tv_c"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="C"
              android:textColor="@color/warning_orange"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_0"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="0"
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <TextView
              android:id="@+id/tv_point"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="."
              android:textColor="@color/text_black"
              android:textSize="32sp"
              />
        </LinearLayout>
      </LinearLayout>
      <View
          android:layout_width="1px"
          android:layout_height="match_parent"
          android:background="@color/divider_medium"
          />
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          >
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            bind:srcCompat="@drawable/ck_ic_calculater_delete"
            />
        <FrameLayout
            android:id="@+id/fl_alipay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:enabled="@{viewModel.enable}"
            android:layout_weight="1.5"
            android:background="@drawable/ck_bg_alipay"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:drawablePadding="5dp"
              android:drawableTop="@drawable/ck_ic_payment_alipay"
              android:text="支付宝"
              android:textColor="@color/white"
              android:textSize="18sp"

              />

        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_wxpay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:enabled="@{viewModel.enable}"
            android:layout_weight="1.5"
            android:background="@drawable/ck_bg_wxpay"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:drawablePadding="5dp"
              android:drawableTop="@drawable/ck_ic_payment_wechat"
              android:text="微信支付"
              android:textColor="@color/white"
              android:textSize="18sp"

              />

        </FrameLayout>

      </LinearLayout>


    </LinearLayout>

  </LinearLayout>
</layout>
