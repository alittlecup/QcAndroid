<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <ImageView
        android:id="@+id/filter_seller_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/default_manage_male"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_filter_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/filter_seller_head"
        android:layout_alignTop="@+id/filter_seller_head"
        android:layout_marginLeft="15dp"
        style="@style/QcTextStyleMediumDark"
        tools:text="APP"
        />

    <TextView
        android:id="@+id/tv_filter_seller_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="18399993322"
        android:layout_below="@+id/tv_filter_seller_name"
        android:layout_toRightOf="@+id/filter_seller_head"
        android:layout_marginLeft="15dp"
        style="@style/QcTextStyleMediumDark"
        />

    <ImageView
        android:id="@+id/img_hook"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/vector_hook_green"
        />

  <include
      layout="@layout/divider_grey"
      android:id="@+id/asdf"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="12dp"
      />
</RelativeLayout>