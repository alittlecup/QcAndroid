<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.qingchengfit.fitcoach.fragment.ComfirmDetailFragment"
    >

  <!--<include layout="@layout/common_toolbar"/>-->

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"

      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/recorddetail_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/activity_vertical_margin"
          android:layout_marginLeft="@dimen/activity_horizontal_margin"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginTop="@dimen/activity_vertical_margin"
          android:textSize="18sp"
          android:textStyle="bold"
          tools:text="测试"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:id="@+id/record_comfirm_img"
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"
          android:src="@drawable/ic_qc_identify"
          android:visibility="gone"
          tools:visibility="visible"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/workexp_detail_hiden"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/orange"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/workexp_detail_hiden"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/Qc.TextCommonGrey"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:scaleType="fitXY"
          android:src="@drawable/ic_baseinfo_city"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/qc_edit_drawable_padding"
          android:text="机构:"
          style="@style/Qc.TextCommonGrey"
          />

      <TextView
          android:id="@+id/recorddetail_host"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Qc.TextCommonGrey"

          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"

        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:scaleType="fitXY"
          android:src="@drawable/ic_start_time"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/qc_edit_drawable_padding"
          android:text="发证日期:"
          style="@style/Qc.TextCommonGrey"
          />

      <TextView
          android:id="@+id/comfirm_createtime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Qc.TextCommonGrey"

          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"

        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:scaleType="fitXY"
          android:src="@drawable/ic_schedule"
          />

      <TextView
          android:id="@+id/valid_lable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/qc_edit_drawable_padding"
          android:text="有效期:"
          style="@style/Qc.TextCommonGrey"
          />

      <TextView
          android:id="@+id/recorddetail_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Qc.TextCommonGrey"

          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:visibility="gone"
        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:src="@drawable/ic_score"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/qc_edit_drawable_padding"
          android:text="学分:"
          style="@style/Qc.TextCommonGrey"
          />

      <TextView
          android:id="@+id/recorddetail_score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Qc.TextCommonGrey"

          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:visibility="gone"
        >

      <ImageView
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:src="@drawable/ic_comment"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/qc_edit_drawable_padding"
          android:text="机构评价:"
          style="@style/Qc.TextCommonGrey"
          />

      <TextView
          android:id="@+id/recorddetail_comment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Qc.TextCommonGrey"

          />
    </LinearLayout>


    <ImageView
        android:id="@+id/comfirm_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="@dimen/qc_item_height"

        />


  </LinearLayout>


</RelativeLayout>
