<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/gym_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/gym_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阳光上东店"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <!--<ImageView-->
            <!--android:id="@+id/img_pro"-->
            <!--android:layout_width="24dp"-->
            <!--android:layout_height="12dp"-->
            <!--app:srcCompat="@drawable/ic_pro_green"-->
            <!--/>-->

      </LinearLayout>


      <TextView
          android:id="@+id/gym_contact"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="13sp"
          android:text="有效期至：2017-01-01"
          android:textColor="@color/warm_grey_2"
          />

      <TextView
          android:id="@+id/gym_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="13sp"
          android:text="有效期至：2017-01-01"
          android:textColor="@color/warm_grey_2"
          />

      <TextView
          android:id="@+id/gym_permission"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="12sp"
          android:text="有效期至：2017-01-01"
          android:textColor="@color/warm_grey_2"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/del"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="start"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="@string/common_edit"
        android:textColor="@color/primary"
        />
  </LinearLayout>

</android.support.v7.widget.CardView>
