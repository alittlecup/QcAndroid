<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
  </data>

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ck_gym_background"
        >

      <LinearLayout
          android:id="@+id/ll_title_below"
          android:layout_width="match_parent"
          android:layout_height="?android:actionBarSize"
          android:gravity="center_vertical"

          >
        <LinearLayout
            android:id="@+id/show_gym"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            >
          <ImageView
              android:id="@+id/img_gym_photo"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:background="@color/colorPrimary"
              />
          <TextView
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:layout_marginLeft="5dp"
              android:background="?android:selectableItemBackground"
              android:text="@string/show_gym"
              android:textColor="@color/white"
              />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/angle_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:lines="1"
              android:textColor="@color/white"
              android:textSize="18sp"
              tools:text="健身房健身房健身房健身房健身房"
              />

          <ImageView
              android:layout_width="12dp"
              android:layout_height="12dp"
              android:visibility="visible"
              app:srcCompat="@drawable/ic_play_arrow_black_24dp"
              />
        </LinearLayout>
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            >
          <ImageView
              android:id="@+id/action_flow"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_gravity="right"
              android:layout_marginRight="16dp"
              app:srcCompat="@drawable/ic_more_vert_white_24dp"
              />
        </FrameLayout>


      </LinearLayout>
      <LinearLayout
          android:id="@+id/ll_title_above"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:visibility="gone"
          >
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/img_cash"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_cash_line"
            />
        <ImageView
            android:id="@+id/img_cash_scan"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            app:srcCompat="@drawable/ic_scan_line"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/img_charge_card"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            app:srcCompat="@drawable/ic_charge_line"
            android:padding="5dp"
            />


        <ImageView
            android:id="@+id/img_new_card"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            app:srcCompat="@drawable/ic_newcard_line"
            android:padding="5dp"
            />


      </LinearLayout>

    </FrameLayout>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <android.support.design.widget.AppBarLayout
          android:id="@+id/layout_collapsed"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ck_gym_background"
            app:layout_scrollFlags="scroll|snap"
            >
          <LinearLayout
              android:id="@+id/ll_checkout"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:gravity="center_vertical"
              app:layout_collapseMode="parallax"
              >
            <FrameLayout
                android:id="@+id/fl_cash"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                >
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10dp"
                  app:srcCompat="@drawable/ic_cash"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom|center_horizontal"
                  android:layout_marginBottom="12dp"
                  android:text="直接收银"
                  android:textColor="@color/bg_white"
                  android:textSize="13sp"
                  />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_scan"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                >
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10dp"
                  app:srcCompat="@drawable/ck_ic_scan"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom|center_horizontal"
                  android:layout_marginBottom="12dp"
                  android:text="二维码收款"
                  android:textColor="@color/bg_white"
                  android:textSize="13sp"
                  />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_charge_card"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                >
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10dp"
                  app:srcCompat="@drawable/ic_charge"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom|center_horizontal"
                  android:layout_marginBottom="12dp"
                  android:text="会员卡续卡"
                  android:textColor="@color/bg_white"
                  android:textSize="13sp"
                  />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl_new_card"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                >
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10dp"
                  app:srcCompat="@drawable/ic_newcard"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="bottom|center_horizontal"
                  android:layout_marginBottom="12dp"
                  android:text="新开会员卡"
                  android:textColor="@color/bg_white"
                  android:textSize="13sp"
                  />
            </FrameLayout>


          </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

          <android.support.v4.view.ViewPager
              android:id="@+id/vp_charts"
              android:layout_width="match_parent"
              android:layout_height="230dp"
              android:background="@color/bg_white"
              />
          <cn.qingchengfit.widgets.CircleIndicator
              android:id="@+id/indicator"
              android:layout_width="match_parent"
              android:layout_height="36dp"
              android:background="@color/white"
              app:ci_drawable="@drawable/splash_indicator_doc"
              />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/bg_grey"
            android:paddingLeft="15dp"
            android:text="教练功能"
            app:layout_scrollFlags="scroll|snap"
            android:textSize="12sp"
            style="@style/QcTextStyleSmallWarm"
            />
      </android.support.design.widget.AppBarLayout>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/recycler_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:layout_behavior="@string/appbar_scrolling_view_behavior"
          />
    </android.support.design.widget.CoordinatorLayout>

  </LinearLayout>

</layout>
