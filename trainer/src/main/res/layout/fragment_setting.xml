<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_grey"
    >

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/backgroud_grey"
      android:orientation="vertical"
      tools:context="com.qingchengfit.fitcoach.fragment.main.SettingFragment"
      >


    <RelativeLayout
        android:id="@+id/settting_modifyinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/qc_backgroud_selector"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="基本信息设置"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_comfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@drawable/qc_backgroud_selector"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="资质认证设置"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_workexpe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@drawable/qc_backgroud_selector"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="工作经历设置"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />
    </RelativeLayout>


    <include layout="@layout/divider_grey_margin"/>

    <RelativeLayout
        android:id="@+id/setting_calsync"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/setting_cal_sync_title"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />
    </RelativeLayout>



    <include layout="@layout/divider_grey"/>

    <include layout="@layout/divider_grey_margin"/>

    <RelativeLayout

        android:id="@+id/setting_aboutus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="关于我们"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />
    </RelativeLayout>

    <include layout="@layout/divider_grey_left_right"/>

    <RelativeLayout
        android:id="@+id/setting_advice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="意见反馈"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />
    </RelativeLayout>

    <include layout="@layout/divider_grey_left_right"/>

    <RelativeLayout
        android:id="@+id/setting_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/white"
        android:gravity="center|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="分享给朋友"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />
    </RelativeLayout>

    <include layout="@layout/divider_grey_left_right"/>

    <RelativeLayout
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="版本号"
          style="@style/Qc.TextCommonBlack"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:src="@drawable/ic_arrow_right"
          />

      <TextView
          android:id="@+id/version_code"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_marginEnd="32dp"
          android:layout_marginRight="32dp"
          tools:text="v1.0"
          />
    </RelativeLayout>

    <include layout="@layout/divider_grey"/>

    <include layout="@layout/divider_grey_margin"/>

    <Button
        android:id="@+id/setting_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/white"
        android:text="退出登录"
        android:textColor="@color/text_black"
        />

    <include layout="@layout/divider_grey"/>


  </LinearLayout>


</ScrollView>
