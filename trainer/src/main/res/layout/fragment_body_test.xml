<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_toolbar"/>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <android.support.percent.PercentRelativeLayout
          android:layout_width="match_parent"
          android:layout_height="580dp"
          android:layout_gravity="center"
          android:background="@color/white"
          tools:context="com.qingchengfit.fitcoach.fragment.BodyTestFragment"
          >

        <ImageView
            android:id="@+id/img_model"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/img_model_male"
            app:layout_heightPercent="92.5%"
            app:layout_widthPercent="50%"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_model"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="2015-08-15体测数据"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/left_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上臂围:20cm"
            android:visibility="gone"
            app:layout_marginLeftPercent="24%"
            app:layout_marginTopPercent="25%"
            tools:visibility="visible"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/right_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上臂围:20cm"
            android:visibility="gone"
            app:layout_marginLeftPercent="54%"
            app:layout_marginTopPercent="23%"
            tools:visibility="visible"
            style="@style/Qc.TextCommonBlack"

            />

        <TextView
            android:id="@+id/hipline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="臀围:20cm"
            android:visibility="gone"
            app:layout_marginLeftPercent="28%"
            app:layout_marginTopPercent="50%"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/chest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="胸围:20cm"
            android:visibility="gone"
            app:layout_marginLeftPercent="65%"
            app:layout_marginTopPercent="30%"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/left_thigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左大腿围:20cm"
            android:visibility="gone"
            app:layout_marginLeftPercent="20.6%"
            app:layout_marginTopPercent="57%"
            tools:visibility="visible"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/right_thigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右大腿围:20cm"
            android:visibility="gone"
            app:layout_marginLeftPercent="52.6%"
            app:layout_marginTopPercent="54%"
            tools:visibility="visible"
            style="@style/Qc.TextCommonBlack"
            />


        <TextView
            android:id="@+id/waistline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="腰围: 60cm"
            android:visibility="gone"
            app:layout_marginTopPercent="40.4%"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/right_calf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="右小腿围: 26cm"
            android:visibility="gone"
            app:layout_marginBottomPercent="17.1%"
            app:layout_marginRightPercent="20%"
            tools:visibility="visible"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/left_calf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="左小腿围: 26cm"
            android:visibility="gone"
            app:layout_marginBottomPercent="19.1%"
            app:layout_marginLeftPercent="24%"
            tools:visibility="visible"
            style="@style/Qc.TextCommonBlack"
            />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

          <LinearLayout
              android:id="@+id/height_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:visibility="gone"
              tools:visibility="visible"
              >

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="身高"
                />

            <TextView
                android:id="@+id/height"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                style="@style/Qc.TextCommonBlack"
                />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/weight_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_marginTop="4dp"
              android:orientation="horizontal"
              android:visibility="gone"
              tools:visibility="visible"
              >

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="体重"
                />

            <TextView
                android:id="@+id/weight"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                style="@style/Qc.TextCommonBlack"
                />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/bmi_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_marginTop="4dp"
              android:orientation="horizontal"
              android:visibility="gone"
              tools:visibility="visible"
              >

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="BMI"
                />

            <TextView
                android:id="@+id/bmi"

                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                style="@style/Qc.TextCommonBlack"
                />
          </LinearLayout>

          <LinearLayout
              android:id="@+id/body_fat_rate_layout"
              android:layout_width="wrap_content"

              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:orientation="horizontal"
              android:visibility="gone"
              tools:visibility="visible"
              >

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="体脂"
                />

            <TextView
                android:id="@+id/body_fat_rate"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                style="@style/Qc.TextCommonBlack"
                />
          </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            >
          <!--<TextView-->
          <!--android:id="@+id/body_test_more_data"-->
          <!--android:layout_width="125dp"-->
          <!--android:layout_height="36dp"-->
          <!--android:gravity="center"-->
          <!--android:background="@drawable/bg_tagview"-->
          <!--android:text="更多体测数据"-->
          <!--/>-->
          <!--<TextView-->
          <!--android:id="@+id/body_test_more_pic"-->
          <!--android:layout_marginTop="4dp"-->
          <!--android:layout_width="125dp"-->
          <!--android:layout_height="36dp"-->
          <!--android:gravity="center"-->
          <!--android:background="@drawable/bg_tagview"-->
          <!--android:text="体测照片"-->
          <!--/>-->

        </LinearLayout>


      </android.support.percent.PercentRelativeLayout>

      <com.qingchengfit.fitcoach.component.InterupteLinearLayout
          android:id="@+id/other_data"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:descendantFocusability="beforeDescendants"
          android:orientation="vertical"
          >
      </com.qingchengfit.fitcoach.component.InterupteLinearLayout>

      <TextView
          android:id="@+id/test_pic_title"
          android:layout_width="match_parent"
          android:layout_height="@dimen/qc_item_height"
          android:paddingLeft="@dimen/activity_horizontal_margin"
          android:text="体测照片"
          />

      <android.support.v7.widget.RecyclerView
          android:id="@+id/recyclerview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />
    </LinearLayout>

  </ScrollView>

</LinearLayout>
