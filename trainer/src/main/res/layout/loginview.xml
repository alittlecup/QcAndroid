<?xml version="1.0" encoding="utf-8"?>
<com.qingchengfit.fitcoach.fragment.LoginView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divier_linear_vectail"
    android:orientation="vertical"
    android:padding="@dimen/paper_common_padding"
    android:showDividers="middle"

    >

  <cn.qingchengfit.widgets.PhoneEditText
      android:id="@+id/phone_view"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"


      />

  <cn.qingchengfit.widgets.PasswordView
      android:id="@+id/pw_view"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:pw_mode="false"
      />


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:orientation="horizontal"
      >

    <ToggleButton
        android:id="@+id/forgetpw_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/paper_item_height"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_black"
        android:textOff="验证码登录"
        android:textOn="密码登录"
        android:textSize="@dimen/btn_font"
        >
    </ToggleButton>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="@dimen/paper_item_height"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:text="@string/login_btn_lable"
        >
    </Button>
  </LinearLayout>


  <Button
      android:id="@+id/goregiste_btn"
      android:layout_width="match_parent"
      android:layout_height="@dimen/paper_item_height"
      android:layout_below="@id/login_btn"
      android:orientation="horizontal"
      android:text="@string/registe_btn_lable"
      android:visibility="gone"
      >
  </Button>

  <!--</LinearLayout>-->
</com.qingchengfit.fitcoach.fragment.LoginView>