<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halftransparent_grey"
    android:gravity="center"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="270dp"
      android:layout_height="68dp"
      android:background="@color/white"
      >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="会员端页面二维码"
        style="@style/Qc.TextCommonBlack"
        />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_cross_blace"
        />

  </RelativeLayout>

  <FrameLayout
      android:layout_width="270dp"
      android:layout_height="180dp"
      android:layout_gravity="center"
      android:background="@color/white"
      >

    <ImageView
        android:id="@+id/img_qr_code"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@color/white"
        app:srcCompat="@drawable/ic_qc_identify"
        />

  </FrameLayout>

  <TextView
      android:id="@+id/tv_gym_name"
      android:layout_width="270dp"
      android:layout_height="40dp"
      android:background="@color/white"
      android:gravity="center"
      style="@style/Qc.TextCommonGrey"
      />

  <include
      layout="@layout/divider_grey"
      android:layout_width="270dp"
      android:layout_height="1px"
      />

  <TextView
      android:id="@+id/btn_save_qrcode"
      android:layout_width="270dp"
      android:layout_height="@dimen/qc_item_height"
      android:background="@drawable/bg_click"
      android:gravity="center"
      android:text="保存到系统相册"
      android:textColor="@color/colorPrimary"
      />

</LinearLayout>