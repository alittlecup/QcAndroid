<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

  <include layout="@layout/layout_course_detail"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      />

  <LinearLayout
      android:id="@+id/min_course_num_layout"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"

      >

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="最小上课人数"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/min_course_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:text="6"
        style="@style/Qc.TextCommonGrey"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/layout_single"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"

      >

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="单节可约人数"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/single_order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:text="6"
        style="@style/Qc.TextCommonGrey"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/default_course_plan_layout"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"

      >

    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="默认课程计划"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/default_course_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:text="6"
        style="@style/Qc.TextCommonGrey"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/suit_gyms_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="30dp"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"

      >

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="适用场馆"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/suit_gyms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        tools:text="6"
        style="@style/Qc.TextCommonGrey"
        />
  </LinearLayout>


</LinearLayout>