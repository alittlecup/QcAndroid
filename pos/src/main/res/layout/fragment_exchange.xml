<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <include layout="@layout/common_simple_toolbar"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/img_120dp"
      android:background="@color/toolbar"
      android:gravity="center_vertical"
      android:paddingLeft="19dp"
      >

    <ImageView
        android:id="@+id/img_exchange_head"
        android:layout_width="65dp"
        android:layout_height="65dp"
        tools:src="@drawable/ic_default_header"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_oval_dot"
        />

    <TextView
        android:id="@+id/tv_exchange_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="杨楠啊 (1888888888)"
        android:layout_toRightOf="@id/img_exchange_head"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        style="@style/QcTextStyleLargeDark"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_exchange_now_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exchange_now_cashier"
        android:background="@drawable/bg_cornor_71dp"
        android:layout_toRightOf="@id/img_exchange_head"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_exchange_name"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        />

  </RelativeLayout>
  
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginTop="17dp"
      android:gravity="center_vertical"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:orientation="horizontal"
      android:background="@color/white"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始时间"
        style="@style/QcTextStyleStandardDark"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_exchange_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2017-08-10 10:08:20"
        style="@style/QcTextStyleStandardDark"
        android:textColor="@color/text_warm"
        />
  </LinearLayout>

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:orientation="horizontal"
      android:background="@color/white"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束时间"
        style="@style/QcTextStyleStandardDark"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_exchange_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2017-08-10 10:08:20"
        style="@style/QcTextStyleStandardDark"
        android:textColor="@color/text_warm"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginTop="17dp"
      android:gravity="center_vertical"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:orientation="horizontal"
      android:background="@color/white"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共交易"
        style="@style/QcTextStyleStandardDark"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_exchange_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4笔"
        style="@style/QcTextStyleStandardDark"
        android:textColor="@color/text_warm"
        />
  </LinearLayout>

  <include layout="@layout/divider_grey"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_vertical"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:orientation="horizontal"
      android:background="@color/white"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实收"
        style="@style/QcTextStyleStandardDark"
        />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_exchange_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11111.4$"
        style="@style/QcTextStyleStandardDark"
        android:textColor="@color/text_warm"
        />
  </LinearLayout>
  
  <TextView
      android:id="@+id/btn_exchange"
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:text="交班"
      android:background="@drawable/btn_prime"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:gravity="center"
      style="@style/QcTextStyleLargeDark"
      android:textColor="@color/white"
      />

</LinearLayout>