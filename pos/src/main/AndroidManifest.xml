<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.qingchengfit.pos"
    >

  <application
      android:name=".PosApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/QcAppTheme"
      android:taskAffinity="com.rongcapital.pos"
      >
    <activity
        android:name=".card.PosCardActivity"
        android:screenOrientation="portrait"
        android:taskAffinity="com.rongcapital.pos"
        >
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:host="card"
            android:scheme="qcpos"
            />
      </intent-filter>
    </activity>
    <activity android:name="cn.qingchengfit.saasbase.student.StudentActivity"
              android:taskAffinity="com.rongcapital.pos"
        >
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
        <data
            android:host="student"
            android:scheme="qcpos"
            />
      </intent-filter>
    </activity>

    <activity android:name="cn.qingchengfit.saasbase.staff.StaffActivity"
              android:taskAffinity="com.rongcapital.pos"
        >
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
        <data
            android:host="staff"
            android:scheme="qcpos"
            />
      </intent-filter>
    </activity>

    <activity android:name=".login.LoginActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name="cn.qingchengfit.saasbase.bill.BillActivity">
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:host="bill"
            android:scheme="qcpos"
            />
      </intent-filter>
    </activity>

    <activity android:name=".main.MainActivity"/>

  </application>

</manifest>