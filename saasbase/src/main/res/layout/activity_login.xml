<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.qingchengfit.staffkit.cn.qingchengfit.saasbase.login.views.LoginActivity"
    >
  <!--<include layout="@layout/common_toolbar"/>-->
  <android.support.design.widget.TabLayout
      android:id="@+id/login_tabview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="?attr/actionBarSize"
      android:background="@color/toolbar"
      android:paddingBottom="1px"
      app:tabIndicatorColor="@color/white"
      app:tabIndicatorHeight="5dp"
      app:tabSelectedTextColor="@color/white"
      app:tabTextAppearance="@style/Qc.TextCommonWhite"
      app:tabTextColor="@color/dark_white"
      />

  <android.support.v4.view.ViewPager
      android:id="@+id/viewpager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/login_tabview"
      />

</RelativeLayout>
