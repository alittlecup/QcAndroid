<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_red"
        android:paddingBottom="@dimen/little"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/little"
        android:text=""
        android:textColor="@color/red"
        android:textSize="12sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >

      <LinearLayout
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >

        <ImageView
            android:id="@+id/old_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"

            />

        <TextView
            android:id="@+id/old_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/little"
            tools:text="KEnt"
            />
      </LinearLayout>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          app:srcCompat="@drawable/ic_change_arrow"
          />

      <LinearLayout
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >

        <ImageView
            android:id="@+id/new_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_default_head_nogender"
            />

        <TextView
            android:id="@+id/new_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/little"
            tools:text="KEnt"
            />
      </LinearLayout>

    </LinearLayout>

    <include layout="@layout/fragment_su_new_name"/>
  </LinearLayout>
</ScrollView>