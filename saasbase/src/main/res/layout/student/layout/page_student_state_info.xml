<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_marginTop="10dp"
              android:paddingLeft="15dp"
              android:text="全部会员  (人)"
              style="@style/QcTextStyleMediumGrey"
              />

          <TextView
              android:id="@+id/tv_all_student"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="24dp"
              android:layout_marginTop="46dp"
              android:text="- -"
              android:textColor="@color/text_black"
              android:textSize="36dp"
              tools:text="138,174"
              />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/bg_white"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_marginTop="6dp"
              android:paddingLeft="15dp"
              android:text="未跟进时长分布  (人)"
              style="@style/QcTextStyleMediumGrey"
              />

          <cn.qingchengfit.saasbase.mvvm_student.widget.QcPieChart
              android:id="@+id/pie_chart"
              android:layout_width="146dp"
              android:layout_height="146dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginBottom="25dp"
              android:layout_marginTop="55dp"
              />
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_medium"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:background="@color/bg_white"
            android:orientation="horizontal"
            >
          <cn.qingchengfit.saasbase.mvvm_student.widget.CountDateView
              android:id="@+id/count_one"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              />
          <View
              android:layout_width="1dp"
              android:layout_height="15dp"
              android:layout_marginTop="10dp"
              android:background="@color/divider_medium"
              />
          <cn.qingchengfit.saasbase.mvvm_student.widget.CountDateView
              android:id="@+id/count_four"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              />
          <View
              android:layout_width="1dp"
              android:layout_height="15dp"
              android:layout_marginTop="10dp"
              android:background="@color/divider_medium"
              />
          <cn.qingchengfit.saasbase.mvvm_student.widget.CountDateView
              android:id="@+id/count_eight"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              />
          <View
              android:layout_width="1dp"
              android:layout_height="15dp"
              android:layout_marginTop="10dp"
              android:background="@color/divider_medium"
              />
          <cn.qingchengfit.saasbase.mvvm_student.widget.CountDateView
              android:id="@+id/count_fourteen"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_horizontal"
              />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/divider_medium"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            tools:text="1-3天未跟进用户销售任务统计"
            style="@style/QcTextStyleMediumGrey"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_medium"
            />
      </LinearLayout>

    </ScrollView>
  </LinearLayout>
</layout>
