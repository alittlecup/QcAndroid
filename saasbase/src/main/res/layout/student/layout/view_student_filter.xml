<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.support.v7.widget.RecyclerView"/>
        <import type="cn.qingchengfit.widgets.CommonFlexAdapter"/>
        <variable
            name="viewModel"
            type="cn.qingchengfit.saasbase.mvvm_student.viewmodel.home.StudentFilterViewModel"/>


    </data>

    <RelativeLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="27dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_bill_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_filter_bottom"
            app:items="@{viewModel.items}"
            android:overScrollMode="never" />

        <LinearLayout
            android:id="@+id/ll_filter_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/btn_bill_filter_reset"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_rect_corner_primary"
                android:gravity="center"
                android:text="重置"
                android:onClick="@{()->viewModel.onReset()}"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_bill_filter_confirm"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/btn_prime"
                android:gravity="center"
                android:text="@string/confirm"
                android:onClick="@{()->viewModel.onConfirm()}"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>
