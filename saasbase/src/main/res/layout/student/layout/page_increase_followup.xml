<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/bg_white"
          android:orientation="vertical"
          >
        <RadioGroup
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/radiogroup_bg"
            android:orientation="horizontal"
            >
          <RadioButton
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:button="@null"
              android:gravity="center"
              android:text="30天"
              android:textColor="@color/text_black"
              android:textSize="13sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_light"
              />
          <RadioButton
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:button="@null"
              android:gravity="center"
              android:text="7天"
              android:textColor="@color/text_black"
              android:textSize="13sp"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="@color/divider_medium"
              />
          <RadioButton
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:button="@null"
              android:gravity="center"
              android:text="今天"
              android:textColor="@color/text_black"
              android:textSize="13sp"
              />
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="13dp"
            android:background="@color/divider_medium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            tools:text="8月20日-8月27日"
            style="@style/QcTextStyleMediumDark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="36dp"
            tools:text="89"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            tools:text="新接洽跟进"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_medium"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_grey"
            android:gravity="center"
            android:text="/详细列表/"
            style="@style/QcTextStyleSmallGrey"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_medium"
            />
        <FrameLayout
            android:id="@+id/frag_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/primary"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="分配销售"
              android:textColor="@color/primary"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:background="@color/divider_medium"
              />
          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="分配教练"
              android:textColor="@color/primary"
              />
          <View
              android:layout_width="1px"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
              android:layout_marginTop="10dp"
              android:background="@color/divider_medium"
              />
          <TextView
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center"
              android:text="群发短信"
              android:textColor="@color/primary"
              />
        </LinearLayout>
      </LinearLayout>
    </ScrollView>
  </LinearLayout>
</layout>
