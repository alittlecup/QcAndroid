<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/bg_white_click"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/item_gym_header"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:contentDescription="@string/app_name"
      android:scaleType="fitXY"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:layout_toEndOf="@id/item_gym_header"
      android:layout_toRightOf="@id/item_gym_header"
      android:gravity="center_vertical"
      android:orientation="vertical"

      >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp"

        >

      <TextView
          android:id="@+id/item_gym_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="陈驰元"
          style="@style/Qc.TextCommonBlack"
          />

      <TextView
          android:id="@+id/item_is_personal"
          android:layout_width="14dp"
          android:layout_height="18dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_toEndOf="@id/item_gym_name"
          android:layout_toRightOf="@id/item_gym_name"
          android:background="@drawable/red_dot"
          android:gravity="center"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:visibility="gone"
          tools:text="V"
          />

      <ImageView
          android:id="@+id/qc_identify"
          android:layout_width="24dp"
          android:layout_height="14dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_toEndOf="@id/item_gym_name"
          android:layout_toRightOf="@id/item_gym_name"
          android:contentDescription="@string/app_name"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/ic_local_camera_prime_24dp"

          />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_gym_partner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        tools:visibility="visible"
        >
      <ImageView
          android:id="@+id/img_mt"
          android:layout_width="20dp"
          android:layout_height="20dp"
          app:srcCompat="@drawable/ic_gym_mt_disable"
          />
      <ImageView
          android:id="@+id/img_tb"

          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="16dp"
          app:srcCompat="@drawable/ic_gym_tb_disable"
          />
      <ImageView
          android:id="@+id/img_kb"

          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="32dp"
          app:srcCompat="@drawable/ic_gym_kb_disable"
          />
      <ImageView
          android:id="@+id/img_al"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginLeft="48dp"
          app:srcCompat="@drawable/ic_gym_al_disable"
          />

    </FrameLayout>

    <TextView
        android:id="@+id/item_gym_phonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/min_font"
        tools:text="联系电话:"
        style="@style/Qc.TextCommonGrey"
        />

    <TextView
        android:id="@+id/item_gym_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/min_font"
        tools:text="品牌"
        style="@style/Qc.TextCommonGrey"
        />


  </LinearLayout>

  <ImageView
      android:id="@+id/item_right"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:contentDescription="@string/app_name"
      android:scaleType="center"
      />

  <View
      android:id="@+id/hiden"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/half_white"
      android:visibility="gone"
      />
</RelativeLayout>