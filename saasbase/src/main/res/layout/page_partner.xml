<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="toolbarModel"
        type="cn.qingchengfit.model.others.ToolbarModel"
        />
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/bg_white"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >
    <include
        layout="@layout/common_simple_toolbar"
        android:id="@+id/include_toolbar"
        bind:toolbarModel="@{toolbarModel}"
        />
    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_marginTop="70dp"
        >
      <ImageView
          android:id="@+id/img_gym_partner"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />
      <ImageView
          android:id="@+id/img_gym_photo"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_gravity="bottom"
          tools:srcCompat="@drawable/ic_gym_ali_account"
          />
      <ImageView
          android:id="@+id/img_parnter_mark"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|bottom"
          android:layout_margin="2dp"
          tools:srcCompat="@drawable/ic_gym_al"
          />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="请在电脑浏览器中打开以下链接，管理认证"
        android:textColor="@color/text_black"
        android:gravity="center"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:text="http://cloud.qingchengfit.cn"
        android:textColor="@color/primary"
        android:gravity="center"
        android:textSize="14sp"
        />
    <Button
        android:id="@+id/btn_scan"
        android:layout_width="210dp"
        android:layout_height="46dp"
        android:layout_marginTop="45dp"
        android:text="我已经打开，下一步"
        android:textSize="15sp"
        style="@style/QcBtnPrimary"
        />


  </LinearLayout>
</layout>