<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include layout="@layout/common_simple_toolbar"/>

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/civ_name"
      style="@style/QcCivInputStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:civ_lable="姓名"
      />
  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/civ_phoneNum"
      style="@style/QcCivInputStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:civ_lable="手机号"
      app:civ_inputnum="true"
      />
  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/civ_gender"
      style="@style/QcCivClickStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:civ_lable="性别"
      app:civ_showdivier="false"
      />
  <include layout="@layout/divider_grey"/>
  <include layout="@layout/divider_grey_margin"/>
  <cn.qingchengfit.widgets.CommonInputView
      style="@style/QcCivClickStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:civ_lable="职位"
      app:civ_hint="收银员"
      app:civ_showright="false"
      />
</LinearLayout>