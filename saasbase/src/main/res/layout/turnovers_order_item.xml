<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
  </data>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bg_white"
      android:paddingLeft="15dp"
      android:paddingTop="15dp"
      >
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        tools:text="支"
        android:textColor="@color/bg_white"
        android:textSize="20sp"
        android:background="@drawable/circle_green"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tv_type"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/tv_feature_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/text_black"
          android:textSize="16dp"
          tools:text="[ 购卡 ] 356元"
          />
      <LinearLayout
          android:id="@+id/ll_seller"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="11dp"
          tools:visibility="gone"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业绩归属："
            android:textColor="@color/text_black"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_seller_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="田野"
            />
        <Button
            android:id="@+id/btn_allot"
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_prime"
            android:text="分配"
            android:textColor="@color/bg_white"
            android:textSize="14sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_seller_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/vd_arrow_right_grey_small"
            android:drawableTint="@color/primary"
            android:text="修改"
            android:textColor="@color/primary"
            />
      </LinearLayout>
      <TextView
          android:id="@+id/tv_checkout_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="收款人：田野"
          android:textColor="@color/text_black"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/tv_date"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_marginTop="5dp"
          android:layout_weight="1"
          tools:text="2018-10-22 13:40"
          />

      <include layout="@layout/divider_medium"/>
    </LinearLayout>


  </RelativeLayout>
</layout>
