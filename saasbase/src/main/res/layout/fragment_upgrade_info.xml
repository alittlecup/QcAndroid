<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halftransparent_grey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="270dp"
      android:layout_height="48dp"
      android:background="@color/white"
      >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="高级版"
        android:textSize="@dimen/txt_15sp"
        style="@style/QcTextStyleStandardDark"
        />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/vd_close_grey_24dp"
        />
  </RelativeLayout>

  <FrameLayout
      android:layout_width="270dp"
      android:layout_height="wrap_content"
      android:background="@color/white"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/img_pro"
        android:layout_margin="10dp"
        />

  </FrameLayout>

  <TextView
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:background="@color/white"
      android:gravity="center"
      android:lines="4"
      android:text="升级到健身房管理高级版\n解锁全部功能"
      style="@style/QcTextStyleSmallWarm"
      />
  <TextView
      android:id="@+id/tv_price"
      android:visibility="gone"
      style="@style/QcTextStyleSmallWarm"
      android:background="@color/white"
      android:layout_width="270dp"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:text="首月体验价"
      android:paddingBottom="@dimen/activity_vertical_margin"
      />

  <Button
      android:id="@+id/btn"
      android:layout_width="270dp"
      android:layout_height="@dimen/qc_item_height"
      android:background="@color/colorPrimary"
      android:showDividers="middle"
      style="@style/QcBtnPrimary"
      android:text="立即续费"
      >
  </Button>
</LinearLayout>