<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/bg_click"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        style="@style/QcTextStyleStandardDark"
        />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/little"
        />
    <TextView
        android:id="@+id/tv_content"
        style="@style/QcTextStyleStandardWarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        />
  </LinearLayout>
  <ImageView
      android:id="@+id/img"
      android:layout_width="@dimen/dimen_common_input_60dp"
      android:layout_height="@dimen/dimen_common_input_60dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="30dp"
      android:layout_marginEnd="30dp"
      tools:src="@drawable/no_dayoff"
      android:padding="0.5dp"
      android:background="@drawable/bg_rect_square_img"
      />
  <ImageView
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      app:srcCompat="@drawable/ic_arrow_right"
      />

</RelativeLayout>