<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="选择购卡价格"
      android:padding="@dimen/activity_horizontal_margin"
      />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />
  <LinearLayout
      android:id="@+id/lo_input_money"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_charge_money"
        style="@style/QcCivClickStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_lable="充值金额"
        />
    <cn.qingchengfit.widgets.CommonInputView
        android:id="@+id/civ_real_money"
        style="@style/QcCivClickStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_lable="实收金额(元)"
        app:civ_inputnum="true"
        />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        />
    <cn.qingchengfit.widgets.ExpandedLayout
        android:id="@+id/el_need_valid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_label="设置有效期"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <cn.qingchengfit.widgets.CommonInputView
            android:id="@+id/civ_start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qc_item_height"
            app:civ_lable="开始日期"
            style="@style/QcCivClickStyle"
            />
        <cn.qingchengfit.widgets.CommonInputView
            android:id="@+id/civ_end_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qc_item_height"
            app:civ_lable="结束日期"
            style="@style/QcCivClickStyle"
            />
      </LinearLayout>
    </cn.qingchengfit.widgets.ExpandedLayout>
  </LinearLayout>

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/civ_saler"
      style="@style/QcCivClickStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:civ_lable="业绩归属"
      />

  <cn.qingchengfit.widgets.CommonInputView
      android:id="@+id/civ_mark"
      style="@style/QcCivClickStyle"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qc_item_height"
      app:civ_lable="备注"
      />
</LinearLayout>