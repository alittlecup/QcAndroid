<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data >
    <import type="android.view.View"/>
    <variable
        name="methods"
        type="cn.qingchengfit.saasbase.staff.beans.StaffLoginMethod"/>
  </data>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <TextView
        android:text="登录方式"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        />
    <LinearLayout
        android:id="@+id/layout_login_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:alpha="@{methods.phone_active?1f:0.5f}"
        >

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/vd_loginmethod_phone"
          />
      <android.support.v4.widget.Space
          android:layout_width="16dp"
          android:layout_height="match_parent"
          />
      <TextView
          style="@style/QcTextStyleStandardDark"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text='@{"手机("+methods.phone+")"}'
          />
      <TextView
          style="@style/QcTextStyleStandardWarm"
          android:text="未激活"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="@{methods.phone_active?View.GONE:View.VISIBLE}"
          />
    </LinearLayout>
    <include layout="@layout/divider_grey_left_right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:alpha="@{methods.wx_active?1f:0.5f}"
        >

      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:scaleType="fitXY"
          app:srcCompat="@drawable/vd_loginmethod_wechat"
          />
      <android.support.v4.widget.Space
          android:layout_width="16dp"
          android:layout_height="match_parent"
          />
      <TextView
          style="@style/QcTextStyleStandardDark"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:text='@{"微信("+methods.wx+")"}'
          />

    </LinearLayout>
  </LinearLayout>
</layout>
