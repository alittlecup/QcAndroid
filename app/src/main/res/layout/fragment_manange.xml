<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/primary"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/change_gym"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/change_gym"
                    android:textColor="@color/white"
                    android:background="?android:selectableItemBackground"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="健身房名称"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                    <ImageView
                        android:id="@+id/angle_show"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:srcCompat="@drawable/ic_play_arrow_black_24dp"
                        />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/gym_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSetBg"
            android:minHeight="96dp"
            >

            <LinearLayout
                android:id="@+id/gym_info_layout"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="8dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/name_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_font"
                    tools:text="中美引力"
                    />

                <TextView
                    android:id="@+id/address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/font_divider"
                    android:maxLines="3"
                    android:maxWidth="150dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="1231231231223234234234234234234234"
                    />

                <TextView
                    android:id="@+id/dataoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/font_divider"
                    android:maxLines="2"
                    android:maxWidth="150dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="xxxx-xxxx-xxafasdfasdfasd"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/renewal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/gym_info_layout"
                android:layout_toEndOf="@id/gym_info_layout"
                android:layout_toRightOf="@id/gym_info_layout"
                android:padding="4dp"
                android:textColor="@color/white"
                />

            <ImageView
                android:id="@+id/shop_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                />
        </RelativeLayout>

        <TextView
            style="@style/TextTitleHint"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/coach_function_hint"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider_grey"
            />
        <TextView
            style="@style/TextTitleHint"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/more_gym_function_hint"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divider_grey"
            />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>