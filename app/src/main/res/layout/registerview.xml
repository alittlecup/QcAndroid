<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <!--<data >-->
    <!--<variable-->
    <!--name="data"-->
    <!--type="com.paper.loginlibrary.viewmodel.RegisteViewModel"-->
    <!--></variable>-->
    <!--</data>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/registe_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_register_username"
                    android:hint="名字"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:textSize="18sp"
                    />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/registe_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qc_item_height"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                >

                <TextView

                    android:id="@+id/comple_gender_label"
                    style="?android:attr/textAppearanceMediumInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_register_gender"
                    android:drawablePadding="@dimen/qc_edit_drawable_padding"
                    android:text="性别"
                    android:textColor="?android:attr/textColorHint"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:background="@color/divider_white"
                    >

                </View>

                <RadioGroup
                    android:id="@+id/comple_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/comple_gender_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_selector"
                        android:checked="true"
                        android:text="@string/gender_male"
                        />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="match_parent"/>

                    <RadioButton

                        android:id="@+id/comple_gender_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_selector"
                        android:text="@string/gender_female"
                        />
                </RadioGroup>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/telephone_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/registe_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:drawableLeft="@drawable/ic_login_phone"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textSize="18sp"
                        />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/registe_getcode_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/checkcode_line"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="25dp"
                    android:singleLine="true"
                    android:text="@string/login_getcode"
                    />
            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/registe_phone_verity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/telephone_layout"
                app:errorEnabled="true"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_register_verify"
                    android:hint="手机验证码"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:textSize="18sp"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/comple_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:errorEnabled="true"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_pw"
                    android:hint="设置登录密码"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:text="123456"
                    android:textSize="18sp"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/comple_pw_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_pw"
                    android:hint="确认登录密码"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:text="123456"
                    android:textSize="18sp"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/registe_btn"
                android:layout_width="133dp"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:text="@string/complete_label"
                >
            </Button>

        </LinearLayout>
    </ScrollView>
</layout>
