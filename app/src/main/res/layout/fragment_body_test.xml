            <!--android:layout_width="125dp"-->
            <!--android:layout_height="36dp"-->
            <!--android:gravity="center"-->
            <!--android:background="@drawable/bg_tagview"-->
            <!--android:text="体测照片"-->
            <!--/>-->

    </LinearLayout>


</android.support.percent.PercentRelativeLayout>
