<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/recordcomfirm_title"
                    style="@style/Qc.TextCommonBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国健身大会"
                    />
                <ImageView
                    android:id="@+id/recordcomfirm_comfirm"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ic_qc_identify"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/recordcomfirm_subtitle"
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recordcomfirm_title"
                android:layout_marginTop="4dp"
                android:text="中国健身大会"
                />
            <TextView
                android:id="@+id/recordcomfirm_date"
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recordcomfirm_title"
                android:layout_marginTop="4dp"
                android:text="中国健身大会"
                />

            <TextView
                android:id="@+id/recordcomfirm_time"
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recordcomfirm_subtitle"
                android:layout_marginTop="4dp"
                android:text="有效期:2015.08.01-2015.08.01"
                />

        </LinearLayout>
        <View
            android:id="@+id/item__hidden"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_halfwhite"
            tools:visibility="visible"
            />
        <ImageView
            android:id="@+id/img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"
            />



    </RelativeLayout>
</FrameLayout>