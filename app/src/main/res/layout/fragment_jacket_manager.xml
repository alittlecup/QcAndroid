<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
>
    <cn.qingchengfit.widgets.ExpandedLayout
        android:id="@+id/custom_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_label="自定义封面照片"
    >
        <View android:layout_width="match_parent" android:layout_height="0dp"/>
    </cn.qingchengfit.widgets.ExpandedLayout>
    <TextView
        android:id="@+id/costum_jacket_hint"
        style="@style/TextTitleHint"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:layout_height="40dp"
        android:text="@string/custom_jacket_hint"
    />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

</LinearLayout>



