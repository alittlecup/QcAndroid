<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="12dp"
      >

    <ImageView
        android:id="@+id/item_personal_header"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:src="@drawable/head"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/item_personal_name"
            style="@style/QcTextStyleStandardDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            tools:text="陈驰元"
            />

        <ImageView
            android:id="@+id/item_personal_gender"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gender_signal_female"
            />

        <TextView
            android:id="@+id/tv_referrer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/qc_text_grey"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="@string/qc_referrer_count"
            />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_student_status"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="left|center_vertical"
            tools:text="已完成"
            android:textColor="@color/qc_allotsale_green"
            android:textSize="13sp"
            />
      </LinearLayout>


      <TextView
          android:id="@+id/item_person_phone"
          style="@style/Qc.TextCommonGrey"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="13sp"
          tools:text="15123358198"
          />

      <TextView
          android:id="@+id/text_reverse_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Qc.TextCommonGrey"
          tools:text="预约时间：2017-05-04  18:04"
          android:textSize="13sp"
          android:layout_marginTop="4dp"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginTop="4dp"
          >

        <ImageView
            android:id="@+id/img_pay_way"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_pay_wechat"
            />

        <TextView
            android:id="@+id/text_pay_way"
            style="@style/Qc.TextCommonGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textSize="13sp"
            tools:text="中美引力次卡(ID:412)"
            />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="15dp"
          android:paddingBottom="15dp"
          >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="人数"
              style="@style/Qc.TextCommonGrey"
              />

          <TextView
              android:id="@+id/text_report_reverse_number"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="1"
              android:textColor="@color/qc_text_black"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="课程收入"
              style="@style/Qc.TextCommonGrey"
              />

          <TextView
              android:id="@+id/text_report_reverse_income"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="200.00元"
              android:textSize="15sp"
              android:textColor="@color/qc_text_black"
              />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="课程实收"
              style="@style/Qc.TextCommonGrey"
              />

          <TextView
              android:id="@+id/text_report_reverse_fact"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:text="180.00元"
              android:textSize="15sp"
              android:textColor="@color/text_orange"
              />

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

</LinearLayout>