<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/common_toolbar">
    </include>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            tools:context="com.qingchengfit.fitcoach.fragment.AddBelongGymFragment">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/qc_item_height"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="注：每名教练只能添加一个&#34;个人健身房&#34;"
                android:textColor="@color/red"
                />

            <include
                layout="@layout/divider_grey"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                >
            </include>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/qc_item_height"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="@string/add_self_gym"
                android:textColor="@color/text_black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/circle_prime"
                    android:gravity="center"

                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="如果您所在的健身房还未使用「青橙健身房管理系统」，您可以使用“个人健身房”管理您的学员和课程预约；"
                    android:textColor="@color/primary"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/circle_prime"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="用于管理除&#34;所属健身房&#34;以外的工作。"
                    android:textColor="@color/primary"
                    />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/add_gym_private_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:text="我知道了"
        android:visibility="gone"
        />
</RelativeLayout>
