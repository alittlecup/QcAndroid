<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/bg_grey"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="分享至"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/wechat_friend"

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_margin="6dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_share_wechat"
                />
            <TextView
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:layout_marginTop="@dimen/little"
                android:text="微信好友"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wechat_circle"

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_margin="6dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_share_moment"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/little"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:text="朋友圈"
                android:layout_width="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/copy_link"

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_margin="6dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_share_copylink"
                />
            <TextView
                android:layout_marginTop="@dimen/little"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="复制链接"
                android:layout_width="wrap_content"
                />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>