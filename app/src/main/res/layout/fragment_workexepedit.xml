<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/backgroud_grey"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:id="@+id/host_layout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/white"
        >

      <ImageView
          android:id="@+id/host_img"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/activity_horizontal_margin"
          tools:src="@drawable/test_pic"
          />

      <ImageView
          android:id="@+id/host_qc_identify"
          android:layout_width="14dp"
          android:layout_height="14dp"
          android:layout_alignBottom="@id/host_img"
          android:layout_alignRight="@id/host_img"
          android:background="@drawable/circle_white"
          android:padding="1dp"
          android:src="@drawable/ic_qc_identify"
          android:visibility="gone"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="70dp"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/workexpedit_gym_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:text="很长很长才名字"
            style="@style/Qc.TextCommonBlack"
            />

        <TextView
            android:id="@+id/host_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="很长  很长才名字"
            style="@style/Qc.TextCommonGrey"
            />
      </LinearLayout>

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/activity_horizontal_margin"
          android:src="@drawable/ic_arrow_right"
          />

    </RelativeLayout>

    <include layout="@layout/divider_grey"/>

    <include
        layout="@layout/divider_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        />

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_start_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_clickable="true"
        app:civ_lable="入职时间"
        >
    </com.qingchengfit.fitcoach.component.CommonInputView>

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_clickable="true"
        app:civ_lable="离职时间"
        >

    </com.qingchengfit.fitcoach.component.CommonInputView>

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:visibility="gone"
        app:civ_lable="城市"
        >

    </com.qingchengfit.fitcoach.component.CommonInputView>


    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_position"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_lable="职位"
        >
    </com.qingchengfit.fitcoach.component.CommonInputView>

    <LinearLayout
        android:id="@+id/workexpedit_expe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="@dimen/qc_item_height"
          android:layout_centerVertical="true"
          android:gravity="center_vertical"
          android:text="职位说明"
          style="@style/Qc.TextCommonGrey"
          ></TextView>

      <EditText
          android:id="@+id/workexpedit_descripe"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@color/transparent"
          android:gravity="top"
          android:maxLength="50"
          style="@style/Qc.TextCommonBlack"

          />

      <include layout="@layout/divider_grey"></include>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="团课业绩(选填)"
        style="@style/Qc.TextCommonBlack"
        />

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_group_class"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_inputnum="true"
        app:civ_lable="团课数量(节)"
        >
    </com.qingchengfit.fitcoach.component.CommonInputView>

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_group_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_inputnum="true"
        app:civ_lable="团课服务(人次)"
        >
    </com.qingchengfit.fitcoach.component.CommonInputView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="私教业绩(选填)"
        style="@style/Qc.TextCommonBlack"
        />

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_private_class"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_inputnum="true"
        app:civ_lable="私教数量(节)"
        >
    </com.qingchengfit.fitcoach.component.CommonInputView>

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_private_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_inputnum="true"
        app:civ_lable="私教服务(人次)"
        >
    </com.qingchengfit.fitcoach.component.CommonInputView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="销售业绩(选填)"
        style="@style/Qc.TextCommonBlack"
        />

    <com.qingchengfit.fitcoach.component.CommonInputView
        android:id="@+id/workexpedit_sale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        app:civ_inputnum="true"
        app:civ_lable="销售额(元)"
        >
    </com.qingchengfit.fitcoach.component.CommonInputView>

    <Button
        android:id="@+id/workexpedit_comfirm_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qc_item_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:text="@string/login_comfirm"
        />
  </LinearLayout>
</ScrollView>