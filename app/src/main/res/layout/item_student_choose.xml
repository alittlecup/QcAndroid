<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/item_student_alpha"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/backgroud_grey"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/red"
        android:textSize="18sp"
        tools:text="A"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="vertical"
        >

        <CheckBox

            android:id="@+id/item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:button="@drawable/radio_selector"
            android:clickable="false"
            />

        <ImageView
            android:id="@+id/item_student_header"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/item_checkbox"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/item_student_header"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/item_student_name"
                    style="@style/Qc.TextCommonBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="陈驰元"
                    />

                <ImageView
                    android:id="@+id/item_student_gender"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_gender_signal_female"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/item_student_phonenum"
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="联系电话:"
                />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_student_header"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_arrow_right"
            android:visibility="gone"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item_student_header"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/divider_grey"
            >
        </View>
    </RelativeLayout>
</LinearLayout>
