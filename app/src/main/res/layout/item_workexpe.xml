<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/item_workexpe_img"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:src="@drawable/test_pic"
        android:layout_centerVertical="true"
        />
    <LinearLayout

        android:id="@+id/item_workexpe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_workexpe_name"
                style="@style/Qc.TextCommonBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="中美引力工作室"
                />
            <TextView
                android:id="@+id/item_workexpe_address"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="|背景"
                />
            <ImageView
                android:id="@+id/qc_identify"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_qc_identify"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_workexpe_time"
            style="@style/Qc.TextCommonBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2014-至今"
            />

    </LinearLayout>
    <View
        android:id="@+id/item_workexpe_hidden"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_halfwhite"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_workexpe"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_arrow_right"
        />

</RelativeLayout>