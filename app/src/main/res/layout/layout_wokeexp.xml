<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroud_grey"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/gym_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <ImageView
            android:id="@+id/gym_identify"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@id/gym_img"
            android:layout_alignRight="@id/gym_img"
            android:background="@drawable/circle_white"
            android:src="@drawable/ic_qc_identify"
            />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/gym_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="名字"
                    />
               <TextView
                   android:id="@+id/gym_address"
                   android:layout_marginLeft="5dp"

                   style="@style/Qc.TextCommonGrey"
                   android:layout_gravity="center_vertical"
                   android:textSize="12sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   tools:text="|北京"/>
            </LinearLayout>
            <TextView
                android:id="@+id/gym_time"
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="xxx-xxx"
                />
        </LinearLayout>
        <include layout="@layout/divider_grey"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/workexp_detail_hiden"
        style="@style/Qc.TextCommonGrey"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/orange"
        android:text="该条工作经历已经隐藏,不会显示在您的主页"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        />
    <include
        android:layout_marginTop="10dp"
        layout="@layout/divider_grey"
             android:layout_width="match_parent"
             android:layout_height="1dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_exp_positon"

            />
        <TextView
            android:id="@+id/workexp_detail_position"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="教练"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"

        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_exp_desc"

            />
        <TextView
            android:id="@+id/workexp_detail_desc"

            android:layout_marginTop="8dp"

            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/test_test_short"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/workexp_detail_group_layout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_rect"
        android:gravity="center_vertical"
        >
        <ImageView

            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_achievement_group"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#b6b6b6"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/workexp_detail_group_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="987"
                android:textColor="@color/primary"
                />
            <TextView
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团课节数"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/workexp_detail_group_server"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="987"
                android:textColor="@color/primary"
                />
            <TextView
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务人次"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/workexp_detail_private_layout"

        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_rect"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_achievement_private"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#b6b6b6"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/workexp_detail_private_count"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="987"
                android:textColor="@color/primary"
                />
            <TextView
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私教节数"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/workexp_detail_private_server"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="987"
                android:textColor="@color/primary"
                />
            <TextView
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务人次"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/workexp_detail_sale_layout"

        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_rect"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_achievement_sale"

            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#b6b6b6"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/workexp_detail_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="987"
                android:textColor="@color/primary"
                />
            <TextView
                style="@style/Qc.TextCommonGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售额"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>