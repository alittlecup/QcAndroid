<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroud_grey"
              android:orientation="vertical"
              tools:context="com.qingchengfit.fitcoach.fragment.ModifyPwFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qc_item_height"
            >

            <EditText
                android:id="@+id/modifyphone_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qc_item_height"
                android:background="@color/transparent"
                android:hint="请输入手机号"
                android:inputType="number"
                />

            <TextView
                android:id="@+id/modifyphone_getcode_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/checkcode_line"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/login_getcode"

                />

        </RelativeLayout>

        <include
            layout="@layout/divider_white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            >
        </include>

        <EditText
            android:id="@+id/modifyphone_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qc_item_height"

            android:background="@color/transparent"
            android:hint="手机验证码"
            android:inputType="number"
            />

        <include
            layout="@layout/divider_white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            >
        </include>

        <EditText
            android:id="@+id/modifypw_new_pw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qc_item_height"
            android:background="@color/transparent"
            android:hint="新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            />

        <include
            layout="@layout/divider_white"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            >
        </include>
        <EditText
            android:id="@+id/modifypw_comfirm_pw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qc_item_height"
            android:background="@color/transparent"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:maxLength="16"

            />

    </LinearLayout>

    <include
        layout="@layout/divider_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        >
    </include>
    <Button
        android:id="@+id/modifypw_comfirm_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/login_comfirm"
        />

</LinearLayout>
