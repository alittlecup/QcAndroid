<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qingchengfit.fitcoach.activity.Main2Activity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <View
            android:id="@+id/order_studnet"
            android:layout_width="100dp"
            android:layout_height="60dp"/>
        <View
            android:id="@+id/web_position"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </FrameLayout>

    <include layout="@layout/divider_grey"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >
        <cn.qingchengfit.widgets.TabView
            android:id="@+id/tabview"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            app:text_size="12sp"
            app:text_select_color="@color/primary"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qc_item_height"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.3"
                />
            <TextView
                android:id="@+id/tv_noti_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_notification"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="99"
                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
