<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/primary_dark"></solid>
            <stroke android:color="@color/primary_dark"></stroke>
        </shape>
    </item>
    <item android:drawable="@color/primary"
          android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/primary"></solid>
            <stroke android:color="@color/primary"></stroke>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/warm_grey"></solid>
            <stroke android:color="@color/warm_grey"></stroke>
        </shape>
    </item>
    <item android:drawable="@color/primary">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/primary"></solid>
            <stroke android:color="@color/primary"></stroke>
        </shape>
    </item>
</selector>