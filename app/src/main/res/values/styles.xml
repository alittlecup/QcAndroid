<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="colorControlNormal">@color/divider_white</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>


        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>


        <!--<item name="textViewStyle">@style/Qc.TextCommonGrey</item>-->

        <item name="android:actionBarStyle">@style/Qc.ActionBarStyle</item>
        <item name="actionBarStyle">@style/Qc.ActionBarStyle</item>
        <item name="buttonStyle">@style/Qc.CommonBtn</item>
        <item name="android:editTextStyle">@style/Qc.EditTextStyle</item>
        <item name="editTextStyle">@style/Qc.EditTextStyle</item>
        <!--<item name="windowBackground">@color/white</item>-->
        <item name="android:textViewStyle">@style/Qc.TextCommonGrey</item>
        <item name="android:buttonStyle">@style/Qc.CommonBtn</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Qc.ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Qc.TextCommonGrey" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/common_font</item>
    </style>
     <style name="Qc.TextCommonBlack" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/common_font</item>
         <item name="android:gravity">center_vertical</item>
     </style>

    <style name="Qc.TextCommonWhite" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_font</item>
    </style>
    <style name="Qc.CommonBtn" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_prime_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Qc.EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/qc_edit_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/warm_grey</item>


    </style>
    <style name="Qc.EditHintStyle" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">@dimen/qc_edit_drawable_padding</item>
    </style>

    <style name="TextTranparents" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_left_out</item>
    </style>
</resources>
