<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="colorControlNormal">@color/divider_white</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:actionBarStyle">@style/Qc.ActionBarStyle</item>
        <item name="actionBarStyle">@style/Qc.ActionBarStyle</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="buttonStyle">@style/Qc.CommonBtn</item>
        <item name="android:editTextStyle">@style/Qc.EditTextStyle</item>
        <item name="editTextStyle">@style/Qc.EditTextStyle</item>
        <item name="android:scrollViewStyle">@style/Qc.ScrollviewStyle</item>
        <item name="android:textViewStyle">@style/Qc.TextCommonGrey</item>
        <item name="android:buttonStyle">@style/Qc.CommonBtn</item>
    </style>

    <style name="Qc.SplashTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Qc.Datepicker" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowTitleSize">0dp</item>

    </style>

    <style name="Qc.ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionBarSize">@dimen/qc_actionbar_height</item>
        <item name="actionBarSize">@dimen/qc_actionbar_height</item>
    </style>

    <style name="Qc.ScrollviewStyle" parent="android:Widget.ScrollView">
        <item name="android:scrollbars">none</item>
    </style>




    <style name="Qc.TextCommonWhite" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Qc.CommonBtn" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_prime</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Qc.EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/qc_edit_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/divider_grey</item>

        <item name="android:textColorHint">@color/warm_grey</item>

    </style>

    <style name="Qc.EditHintStyle" parent="TextAppearance.AppCompat">
        <item name="android:paddingLeft">@dimen/qc_edit_drawable_padding</item>
    </style>

    <style name="TextTranparents" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_hold</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_hold</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_left_out</item>
    </style>

    <!-- 底部弹出dialog动画-->
    <style name="ButtomDialogStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_from_bottom</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/slide_out_bottom</item>
        //退出时的动画
    </style>


    <style name="TopDialogWindowStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:background">@null</item>

        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Customize your theme here. -->

        <item name="colorControlNormal">@color/divider_white</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:actionBarStyle">@style/Qc.ActionBarStyle</item>
        <item name="actionBarStyle">@style/Qc.ActionBarStyle</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="buttonStyle">@style/Qc.CommonBtn</item>
        <item name="android:editTextStyle">@style/Qc.EditTextStyle</item>
        <item name="editTextStyle">@style/Qc.EditTextStyle</item>
        <item name="android:scrollViewStyle">@style/Qc.ScrollviewStyle</item>
        <item name="android:textViewStyle">@style/Qc.TextCommonGrey</item>
        <item name="android:buttonStyle">@style/Qc.CommonBtn</item>


    </style>

    <style name="LoadingDialog.Style" parent="AlertDialog.AppCompat">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowFrame">@null</item>
    </style>


    <!-- 时间选择器popwidnow 显示消失动画 -->
    <style name="timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="floataction_style" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MonthTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="DayOfTheWeek">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/day_of_month</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="theme_dialog_fullscreen">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DayOfTheMonth">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/day_of_month</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@drawable/bg_loading_dialog</item>
        <!-- 设置window背景透明，也就是去边框 -->
    </style>


    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/bg_grey</item>
    </style>

</resources>
